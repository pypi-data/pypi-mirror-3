<?xml version="1.0" encoding="utf-8" ?>
<OpenSearchDescription xmlns="http://a9.com/-/spec/opensearch/1.1/"
  xmlns:tal="http://xml.zope.org/namespaces/tal"
  xmlns:metal="http://xml.zope.org/namespaces/metal">
	<ShortName tal:content="view/getTitle">Web Search</ShortName>
	<Description><tal:block tal:define="desc view/getTheDescription|nothing"
			  tal:condition="desc" tal:replace="desc" /> </Description>      
	<Tags><tal:block tal:define="tags view/getTags|nothing"
			  tal:condition="tags" tal:replace="tags" /></Tags>
	<Contact><tal:block tal:define="contact view/getContact|nothing"
			  tal:condition="contact" tal:replace="contact" /></Contact>
	<Url tal:condition="view/getAllowHTML" type="text/html" method="get"
	  tal:attributes="template string:${here/portal_url}/search?SearchableText={searchTerms}" />
	<Url tal:condition="view/getAllowRSS" type="application/rss+xml" method="get"
	  tal:attributes="template string:${here/portal_url}/opensearch_rss?search={searchTerms}&amp;startPage={startPage?}" />
	<Url type="application/x-suggestions+json" 
	  tal:attributes="template string:${here/portal_url}/suggestion?command={searchTerms}"/>
	<Image height="16" width="16" type="image/jpeg" tal:content="python:container.absolute_url()+'/++resource++opensearch.png'"> Image </Image>
</OpenSearchDescription>

