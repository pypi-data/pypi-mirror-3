<?xml version="1.0"?>
<!-- This file holds the setup configuration of the viewlet managers
     for the "MVOB Theme" skin.
     -->

<object>
  <order manager="plone.portalheader" skinname="MVOB Theme" based-on="Sunburst Theme">
     <viewlet name="plone.global_sections" insert-before="plone.logo" />
     <viewlet name="plone.searchbox" insert-before="plone.global_sections" />
  </order>
    
  <order manager="plone.portalfooter" skinname="MVOB Theme" based-on="Sunburst Theme">
     <viewlet name="plonetheme.mvob.visualclear" insert-before="*" />
     <viewlet name="plonetheme.mvob.copyright" insert-after="plonetheme.mvob.visualclear" />
     <viewlet name="plonetheme.mvob.personal_bar" insert-after="plonetheme.mvob.copyright" />
     <viewlet name="plonetheme.mvob.footermenu" insert-before="plonetheme.mvob.personal_bar" />
  </order>

  <hidden manager="plone.portalheader" skinname="MVOB Theme">
    <viewlet name="plone.personal_bar" />
  </hidden>
  
  <hidden manager="plone.abovecontent" skinname="MVOB Theme">
    <viewlet name="plone.path_bar" />
  </hidden>
  
  <hidden manager="plone.belowcontent" skinname="MVOB Theme">
    <viewlet name="plone.path_bar" />
    <viewlet name="plone.belowcontenttitle.keywords" />
  </hidden>
  
  <hidden manager="plone.portalfooter" skinname="MVOB Theme">
    <viewlet name="plone.footer" />
    <viewlet name="plone.colophon" />
    <viewlet name="plone.site_actions" />
    <viewlet name="plonetheme.mvob.personal_bar" />
    <viewlet name="plonetheme.mvob.footermenu" />
  </hidden>

</object>
