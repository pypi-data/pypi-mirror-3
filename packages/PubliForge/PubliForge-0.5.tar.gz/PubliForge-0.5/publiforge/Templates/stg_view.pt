<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      metal:use-macro="base">
<head><title></title></head>
<body>
<div id="mainPanel" metal:fill-slot="main">
  ${form.begin()}
  <!-- ............................... Buttons ............................ -->
  <div id="buttons">
    <div class="first">
      ${request.breadcrumbs.back_button()}
    </div>
    <div class="last">
      <div tal:condition="i_modifier" tal:omit-tag="">
        ${form.button(route('storage_edit', storage_id=storage.storage_id), _('Edit'), class_='buttonMain')}
      </div>
      ${form.button(route('storage_root', storage_id=storage.storage_id), _('Browse'))}
      ${form.submit('exp!.x', _('Export'))}
    </div>
    <hr class="hidden"/>
  </div>
  <div id="main">
    <h2 id="subtitle" class="storage" title="${_('Storage settings')}">${storage.label}</h2>
    <!-- ................................ Tabs ............................ -->
    <div id="tabSet">
      ${tab_set.toc('tabStorage')}
      <!-- ..... Description ...... -->
      ${tab_set.tab_begin(0, 'd')}
      ${form.grid_item(None, _('Access:'), _(STORAGE_ACCESS[storage.access]), class_='')}
      ${form.grid_item(None, _('Identifier:'), storage.storage_id, class_='')}
      ${form.grid_item(None, _('Label:'), storage.label, class_='')}
      ${form.grid_item(None, _('Description:'), storage.description, class_='')}
      ${form.grid_item(None, _('Version control:'),
        _(vcs_engines.get(storage.vcs_engine, storage.vcs_engine)).partition(u'â€“')[2], class_='')}
      ${form.grid_item(None, _('Source URL:'), storage.vcs_url, class_='')}
      ${form.grid_item(None, _('Default user:'), storage.vcs_user, class_='')}
      <div class="formItem">
          <label><em>${_('Synchronization:')}</em></label>
          <div>${REFRESH.get(storage.refresh, _('every ${m} minutes', dict(m=storage.refresh / 60)))}</div>
          <div class="clear"></div>
        </div>
      ${form.grid_item(None, _('Public URL:'), storage.public_url, class_='')}
      ${tab_set.tab_end()}
      <!-- ......... Users ........ -->
      ${tab_set.tab_begin(1, 'u')}
      <div tal:condition="storage.access != 'open'"
           tal:define="users_view load: users_view.macro.pt" metal:use-macro="users_view"/>
      <div tal:condition="storage.access == 'open'">${_('Free access.')}</div>
      <div tal:condition="storage.access != 'open' and not users">${_('No authorized users.')}</div>
      ${tab_set.tab_end()}
    </div>
  </div>
  ${form.end()}
</div>  
</body>
</html>