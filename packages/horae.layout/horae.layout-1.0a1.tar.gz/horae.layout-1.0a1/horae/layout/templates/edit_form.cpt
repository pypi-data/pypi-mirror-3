<html xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      metal:use-macro="path:view/macro">
  <div metal:fill-slot="content"
       tal:attributes="class getattr(view, 'cssClass', '')">
    
    <div tal:replace="structure hasattr(view, 'prepend') and view.prepend() or ''" />
    
    <form action="." method="post" class="edit-form" enctype="multipart/form-data"
          tal:attributes="action path:view/action|request/URL;
                          id view.id;
                          data-actual view.actual_url;
                          class 'edit-form '+getattr(view, 'cssClass', '');">
    
      <h1 class="firstHeading"
          i18n:translate=""
          tal:condition="view.label"
          tal:content="structure view.label">Label</h1>
      
      <div class="contents">
      
        <div class="form-status"
          tal:define="status view.status"
          tal:attributes="class 'form-status '+view.statusCssClass"
          tal:condition="status">
      
          <div i18n:translate="" tal:content="view.status">
            Form status summary
          </div>
      
          <ul class="errors" tal:condition="view.errors">
            <li tal:repeat="error view.error_views()">
               <span tal:replace="structure error">Error Type</span>
            </li>
          </ul>
        </div>
      
        <ul>
            <tal:block repeat="widget view.widgets">
              <li tal:define="hint widget.hint;
                              error widget.error();"
                  tal:attributes="class 'hasError '+widget.name+' '+getattr(widget.context, '__name__', '') if error else widget.name+' '+getattr(widget.context, '__name__', '')">
                <label tal:attributes="for widget.name">
                  <span i18n:translate=""
                        tal:content="widget.label">label</span>
                  <span class="required" tal:condition="widget.required"
                  >*</span>
                  <span class="hint" tal:condition="hint"
                        tal:content="hint">Hint</span>
                </label>
                <div class="widget" tal:content="structure widget()">
                  <input type="text" />
                </div>
                <div class="error" tal:condition="error">
                  <span tal:replace="structure error">error</span>
                </div>
              </li>
            </tal:block>
            <div tal:replace="structure getattr(view, 'additional', '')" />
        </ul>
      
        <div id="actionsView">
          <span class="actionButtons button-group" tal:condition="view.availableActions">
            <input tal:repeat="action view.actions"
                   tal:replace="structure action.render()"
                   />
          </span>
        </div>
      </div>
    </form>
    <div tal:replace="structure hasattr(view, 'append') and view.append() or ''" />
  </div>
</html>
