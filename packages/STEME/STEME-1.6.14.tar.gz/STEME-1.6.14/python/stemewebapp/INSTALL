
# Install necessary python libraries
sudo apt-get install python-psutil
sudo pip install flask
sudo pip install Flask-SQLAlchemy
sudo pip install sqlalchemy
sudo pip install Flask-WTF

# Configure application settings: /etc/STEME/settings.py

# Create the database
sudo -u www-data PYTHONPATH=/usr/local/src/STEME/python STEMEWEBAPP_SETTINGS=/etc/STEME/settings.py python /usr/local/src/STEME/python/scripts/stemewebapp_create_db.py

