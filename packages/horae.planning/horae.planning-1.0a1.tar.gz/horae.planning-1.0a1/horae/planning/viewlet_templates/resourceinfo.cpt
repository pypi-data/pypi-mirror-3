<div xmlns:tal="http://xml.zope.org/namespaces/tal"
     xmlns:i18n="http://xml.zope.org/namespaces/i18n"
     tal:condition="viewlet.resources"
     i18n:domain="horae.planning"
     class="resource-info">
  <p tal:content="viewlet.info">
    The user is linked with the following human resources:
  </p>
  <ul>
    <li tal:repeat="resource viewlet.resources">
      <a href=""
         tal:attributes="href resource['url']"
         tal:content="resource['name']" />
    </li>
  </ul>
</div>
