<div class="cthumb-widget" i18n:domain="ztfy.file">
	<div class="current-value">
		<tal:var define="value python:view.field.get(view.context)">
			<tal:if condition="value">
				<tal:var define="geometry view/geometry;
								 left python:geometry.position[0];
								 top python:geometry.position[1];
								 width python:geometry.size[0];
								 height python:geometry.size[1];">
					<div>
						<span i18n:translate="">Current content:</span> <span tal:content="value/contentType" /> &nbsp;&ndash;&nbsp;
						<span tal:define="size value/getImageSize" tal:content="python:'%d x %d' % (size[0],size[1])" /> px &nbsp;&ndash;&nbsp;
						<span tal:content="python:value.getSize() / 1024" /> <span i18n:translate="">Kb</span>
					</div>
					<div class="download-link">
						<img class="thumb" tal:attributes="src string:${value/@@absolute_url}/++display++thumb.jpeg" />&nbsp;&nbsp;&nbsp;
						<a target="_blank" tal:attributes="href value/@@absolute_url" alt="" title="Download original image" i18n:attributes="title">
							<img class="cthumb" tal:attributes="src string:${value/@@absolute_url}/++display++cthumb.jpeg;" />
						</a>
					</div>
				</tal:var>
			</tal:if>
			<tal:if condition="not:value">
				[[ <span i18n:translate="">No data</span> ]]
			</tal:if>
		</tal:var>
	</div>
</div>