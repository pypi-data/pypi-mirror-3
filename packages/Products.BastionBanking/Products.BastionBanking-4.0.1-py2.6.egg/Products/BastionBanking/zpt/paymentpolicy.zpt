<html tal:replace="structure container/manage_page_header"/>

    <span tal:replace="structure here/manage_tabs"/>

    <br/>
    <form name="policy" action="manage_paymentPolicy" method="post">
	<table>
          <tr>
              <td class="form-label">Policy</td>
              <td class="form-element">
                  <select name="policy" onchange="document.policy.submit()">
                     <option selected=""
                             tal:repeat="policy here/paymentPolicies"
                             tal:content="policy"
                             tal:attributes="selected python:test(getattr(here, 'paymentpolicy', '') == policy, 1, 0)"/>
                  </select>
              </td>
          </tr>
          <div tal:replace="structure python: here.getPaymentPolicy().render_form(here)" tal:on-error="string:"/>
        </table>
    </form>

<html tal:replace="structure container/manage_page_footer"/>
