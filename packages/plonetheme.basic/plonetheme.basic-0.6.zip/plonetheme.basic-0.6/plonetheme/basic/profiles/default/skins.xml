<?xml version="1.0"?>
<object name="portal_skins" allow_any="False" cookie_persistence="False"
   default_skin="Plone Basic">

 <object name="basic_images"
    meta_type="Filesystem Directory View"
    directory="plonetheme.basic:skins/basic_images"/>
 <object name="basic_styles"
    meta_type="Filesystem Directory View"
    directory="plonetheme.basic:skins/basic_styles"/>

 <skin-path name="Plone Basic" based-on="Plone Default">
  <layer name="basic_images"
     insert-after="custom"/>
  <layer name="basic_styles"
     insert-after="basic_images"/>
 </skin-path>

</object>
