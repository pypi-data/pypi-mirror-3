<scxml xmlns="http://www.w3.org/2005/07/scxml">
    <datamodel>
        <data id="doc"><![CDATA[
            <scxml xmlns="http://www.w3.org/2005/07/scxml">
                <datamodel>
                    <data id="slot1" expr="1" />
                    <data id="slot2" expr="2" />
                </datamodel>
                <state>
                    <transition target="inner_f" >
                        <send target="#_parent" event="quit" namelist="slot1 slot2" />
                    </transition>
                </state>
                <final id="inner_f" />
            </scxml>
        ]]></data>
        <data id="slot1" />
        <data id="slot2" />
    </datamodel>
    <state>
        <invoke id="i">
            <content><![CDATA[$doc]]></content>
            
            <finalize>
                <assign location="slot1" expr="_event.data['slot1']" />
            </finalize>
        </invoke>
        <transition event="quit" target="s2" cond="slot1 and not slot2" />
    </state>
    <state id="s2">
        <invoke id="i2">
            <content><![CDATA[$doc]]></content>
            <finalize />
            <param name="slot2" />
        </invoke>
        <transition event="quit" target="f" cond="slot1 + slot2 == 3" />
    </state>
    <final id="f" />
</scxml>