<!DOCTYPE html>
<html xmlns:py="http://genshi.edgewall.org/"
      xmlns:xi="http://www.w3.org/2001/XInclude">
      
    <xi:include href="../../../templates/master.genshi" />

<head>
    <meta content="text/html; charset=UTF-8" http-equiv="content-type" py:replace="''"/>
    <title>Login</title>
</head>

<body>

<h2>Login</h2>

<form class="table-form login-form" action="${ request.route_url('account.login') }" method="POST">
    <table>
        <tbody>
            <tr>
                <td>${ form.username_or_email.label }</td>
                <td>
                    ${ form.username_or_email() }
                    <span class="field_error" py:for="error in form.username_or_email.errors">
                        ${ error }
                    </span>
                </td> 
            </tr>
            
            <tr>
                <td>${ form.password.label }</td>
                <td>
                    ${ form.password() }
                    <span class="field_error" py:for="error in form.password.errors">
                        ${ error }
                    </span>
                </td>  
            </tr>

            <tr>
                <td></td>
                <td>
                    <input name="submit" type="submit" value="Submit" />
                </td>
            </tr>
        </tbody>
    </table>
    <input name="came_from" type="hidden" value="${ came_from }" />
    <input type="hidden" name="csrf_token" value="${ request.session.get_csrf_token() }" />
</form>


</body>
</html>
