<tal:var define="presentation context/skin:presentation;
				 target context/@@absolute_url;
				 shortname context/i18n:title;" i18n:domain="ztfy.gallery">
	<h2><a tal:attributes="href target" tal:content="shortname" /></h2>
	<div tal:define="date presentation/i18n:publication_date"
		 tal:condition="date"
		 tal:content="date" class="publication_date" />
	<div>
		<a tal:attributes="href target;
						   title shortname;">
			<img tal:define="illustration context/i18n:illustration"
				 tal:condition="illustration"
				 tal:attributes="src string:${illustration/@@absolute_url}/++display++w176.jpeg"
				 class="illustration toleft" />
		</a>
		<div class="body" tal:define="heading context/i18n:heading;
									  renderer heading/html:renderer;">
			<a tal:attributes="href target;
							   title shortname;"
			   tal:content="structure python:renderer.render(presentation.header_format,request)" />
		<div class="clearer"><!-- IE bugfix --></div>
		<div class="footer">
			<tal:var replace="structure context/@@tags" />
			<div class="publication">
				<span class="label" i18n:translate="">By </span> <span class="author" tal:content="view/author/title" /> ~ 
				<span class="date" tal:define="date view/date;
											   formatter request/locale/dates;" i18n:translate="">on <tal:var content="python:formatter.getFormatter('date','long').format(date)" i18n:name="date" /> - <tal:var content="python:formatter.getFormatter('time','short').format(date)" i18n:name="time" /></span>
			</div>
		</div>
	</div>
</tal:var>