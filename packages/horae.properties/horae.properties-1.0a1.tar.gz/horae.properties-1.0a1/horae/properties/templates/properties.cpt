<html xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      metal:use-macro="path:view/macro"
      i18n:domain="horae.properties">
  <div metal:fill-slot="content">
    <h1 class="firstHeading"
      tal:content="view.label()">
      Properties
    </h1>
    <tal:custom condition="view.custom_properties">
      <h2 i18n:translate="">
        Custom properties
      </h2>
      <p i18n:translate="">
        Custom properties in this context
      </p>
      <table tal:replace="structure view.custom_properties" />
    </tal:custom>
    <tal:inherited condition="view.inherited_properties">
      <h2 i18n:translate="">
        Inherited properties
      </h2>
      <p i18n:translate="">
        Properties inherited from parent objects
      </p>
      <table tal:replace="structure view.inherited_properties" />
    </tal:inherited>
    <form action="" class="add-property-form" method="post"
          tal:condition="view.types"
          tal:attributes="action python:view.url(context)+'/add-property'">
      <div id="actionsView">
        <select name="type" size="1">
          <option value=""
                  tal:repeat="type view.types"
                  tal:attributes="value type['value']"
                  tal:content="type['title']" />
        </select>
        <input type="submit" class="button button-discreet" name="add" value="Add property"
               i18n:attributes="value" />
      </div>
    </form>
    <p class="back">
      <a href=""
         tal:attributes="href view.back"
         i18n:translate="">
        Back to the overview
      </a>
    </p>
  </div>
</html>
