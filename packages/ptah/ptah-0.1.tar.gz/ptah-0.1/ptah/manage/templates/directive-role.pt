<table class="zebra-striped">
  <tbody>
    <tr tal:repeat="action actions">
      <td tal:define="r action.args[0]">
	<h4>${r.title} 
	  <small>
	    <a href="${manage_url}/source.html?pkg=${action.info.context.__name__}#sl-${action.info.codeinfo[1]}">
	      ${r.id}</a>
  	  </small></h4>
 	  <p tal:condition="r.description">${r.description}</p>
    </td>
    </tr>
  </tbody>
</table>
