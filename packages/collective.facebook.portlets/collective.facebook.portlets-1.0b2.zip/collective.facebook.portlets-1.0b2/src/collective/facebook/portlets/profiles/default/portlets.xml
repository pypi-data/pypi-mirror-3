<?xml version="1.0"?>
<portlets xmlns:i18n="http://xml.zope.org/namespaces/i18n"
   i18n:domain="plone">
 <portlet title="Facebook wall"
    addview="collective.facebook.portlets.FacebookWallPortlet"
    description="A portlet to show a wall feed from Facebook"
    i18n:attributes="title; description">
  <for interface="plone.app.portlets.interfaces.IColumn" />
  <for interface="plone.app.portlets.interfaces.IDashboard" />
 </portlet>
  <portlet title="Facebook activity feed"
    addview="collective.facebook.portlets.FacebookActivityPortlet"
    description="The Activity Feed portlet displays the most interesting recent activity taking place on your site"
    i18n:attributes="title; description">
  <for interface="plone.app.portlets.interfaces.IColumn" />
  <for interface="plone.app.portlets.interfaces.IDashboard" />
 </portlet>
</portlets>
