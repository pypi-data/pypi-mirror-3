<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      lang="en"
      metal:use-macro="here/main_template/macros/master"
      i18n:domain="structureddocument">
  
<body>

<div metal:fill-slot="main" tal:omit-tag=""
       tal:define="view context/@@multiparagraphpage_view">
  <metal:main_macro define-macro="main">
    <div tal:replace="structure provider:plone.abovecontenttitle" />
    <h1 class="documentFirstHeading" tal:content="here/Title">Main title</h1>

    <div tal:replace="structure provider:plone.belowcontenttitle" />

    <p class="documentDescription hiddenStructure"
       tal:content="here/Description"
       tal:condition="here/Description">
      Description
    </p>

    <div tal:replace="structure provider:plone.abovecontentbody" />    
    <tal:slots  tal:define="paragraphs view/getSlotsContent">
      
      <table id="toprow">
	<tr>
          <tal:paragraphs repeat="p python:paragraphs[:2]">
	    <td tal:define="last repeat/p/end"
	        tal:attributes="class python:test(last, 'lastCol','')"  >
	      <tal:paragraph
	         tal:replace="structure p" /></td>
          </tal:paragraphs>
	</tr>
      </table>
      <table>
	<tr>
	  <tal:paragraphsAndPortlets repeat="p python:paragraphs[2:]">
            <td tal:define="last repeat/p/end"
		tal:attributes="class python:test(last, 'lastCol','')"  >
	      <tal:paragraph
	         tal:replace="structure p" /></td>
	  </tal:paragraphsAndPortlets>
	</tr>
      </table>
    </tal:slots>
    
    <div tal:replace="structure provider:plone.belowcontentbody" />

  </metal:main_macro>
  
</div>
</body>
</html>
