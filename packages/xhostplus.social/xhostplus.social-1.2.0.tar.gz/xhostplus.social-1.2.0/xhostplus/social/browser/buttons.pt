<span tal:omit-tag=""
      tal:condition="view/socialButtonsEnabled">
    <tal:buttons condition="not:view/twoClickEnabled">
        <div id="fb-root"></div>
        <div id="xhostplus-social-viewlet">
            <script type="text/javascript"
                    tal:content="structure view/import_script"/>

            <div class="fb-like" data-send="false" data-width="250" data-show-faces="false" data-action="like" data-href=""
                 tal:attributes="data-href context/absolute_url"></div>
            <a href="http://twitter.com/share" class="twitter-share-button" data-count="horizontal" data-lang=""
               tal:attributes="data-lang view/language"></a>
            <div class="g-plusone" data-size="medium" data-annotation="bubble"></div>
            <script type="IN/Share" data-counter="right"></script>
        </div>
    </tal:buttons>

    <tal:buttons condition="view/twoClickEnabled">
            <script type="text/javascript"
                    tal:content="structure view/two_click_import_script"/>
        <div id="socialshareprivacy"></div>
    </tal:buttons>
</span>
