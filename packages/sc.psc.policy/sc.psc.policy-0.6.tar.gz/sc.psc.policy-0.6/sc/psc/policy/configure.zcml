<configure
    xmlns="http://namespaces.zope.org/zope"
    xmlns:five="http://namespaces.zope.org/five"
    xmlns:genericsetup="http://namespaces.zope.org/genericsetup"
    xmlns:i18n="http://namespaces.zope.org/i18n"
    i18n_domain="sc.psc.policy">

    <five:registerPackage package="." initialize=".initialize" />

    <include package=".browser" />
    <include file="dependencies.zcml" />
    
    <genericsetup:registerProfile
        name="default"
        title="Package repository configuration"
        directory="profiles/default"
        description="Installation of Plone Sofware Center capable site"
        provides="Products.GenericSetup.interfaces.EXTENSION"
        i18n:attributes="title; description"
        />

    <genericsetup:registerProfile
        name="uninstall"
        title="Uninstall: Package repository configuration"
        directory="profiles/uninstall"
        description="Uninstall profile of Package repository configuration"
        provides="Products.GenericSetup.interfaces.EXTENSION"
        i18n:attributes="title; description"
        />
        
    <i18n:registerTranslations directory="locales" />
    
    <!-- Hide products from quickinstaller -->
    <utility factory=".quickinstaller.HiddenProfiles"
             name="sc.psc.policy" />
    <utility factory=".quickinstaller.HiddenProducts"
             name="sc.psc.policy" />
    
    <include package=".upgrades" />
</configure>
