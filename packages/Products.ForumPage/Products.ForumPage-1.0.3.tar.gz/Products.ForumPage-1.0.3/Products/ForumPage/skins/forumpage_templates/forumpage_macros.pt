<div metal:define-macro="listing">

    <div i18n:domain="forumpage" tal:define="fake_context python:request.get('forumpage', context)">
        <div tal:repeat="forum python:fake_context.primary_forums()" class="headlines">
            <h4>
                <a href="" tal:attributes="href python:forum.absolute_url()" tal:content="string:Forum ${forum/Title}"></a>
            </h4>

            <tal:items tal:repeat="obj python:fake_context.get_forum_postings(forum)">
                <br />
                <div class="forumPosting"
                     tal:define="oddrow repeat/obj/odd;"
                     tal:attributes="class python:oddrow and  'odd' or 'even'">
            
                    <div>
                        <h5>
                            <a href="" tal:attributes="href obj/url; title obj/title;">
                                <span tal:replace="obj/title">Title</span>
                            </a>
                        </h5>

		        <span tal:content="structure python:obj['comment']" />
                        <tal:name tal:condition="obj/creator" i18n:domain="plone">
                            
                            <span class="forumPostAuthor" i18n:translate="label_by_author"> by
                                <a href="#"
                                      tal:attributes="href string:${portal_url}/author/${obj/creator}"
                                      tal:content="obj/creator"
                                      i18n:name="author">
                                    Bob Dobalina
                                </a>
                            </span>

                            <span class="documentModified">&mdash;
                                <span i18n:translate="box_last_modified">last modified</span>

                                <span tal:replace="python:fake_context.toLocalizedTime(obj['date'],long_format=1)">
                                  August 16, 2001 at 23:35:59
                                </span>

                            </span>
                            <hr />
                        </tal:name>
                    </div>
                </div>
            </tal:items>
        </div>
    </div>
</div>