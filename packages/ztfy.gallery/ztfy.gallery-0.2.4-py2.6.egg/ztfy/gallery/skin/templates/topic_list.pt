<tal:var define="target context/@@absolute_url;
				 shortname context/i18n:shortname;" i18n:domain="ztfy.gallery">
	<h2><a tal:attributes="href target" tal:content="shortname" /></h2>
	<div>
		<a tal:attributes="href target;
						   title shortname;">
			<img tal:define="illustration context/i18n:illustration"
				 tal:condition="illustration"
				 tal:attributes="src string:${illustration/@@absolute_url}/++display++w176.jpeg"
				 class="illustration toleft" />
		</a>
		<div class="body" tal:define="presentation view/presentation;
									  heading context/i18n:heading;
									  renderer heading/html:renderer;">
			<a tal:attributes="href target; title shortname;"
			   tal:content="structure python:renderer.render(presentation.header_format,request)" />
		</div>
		<div class="clearer"><!-- IE bugfix --></div>
	</div>
</tal:var>