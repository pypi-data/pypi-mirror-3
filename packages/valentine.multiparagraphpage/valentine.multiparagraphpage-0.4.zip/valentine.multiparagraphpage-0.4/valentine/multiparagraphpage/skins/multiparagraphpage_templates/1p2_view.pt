<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      lang="en"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="structuredodcument">
<body>

<div metal:fill-slot="main">

  <metal:main_macro define-macro="main">
    <div tal:replace="structure provider:plone.abovecontenttitle" />

    <div tal:omit-tag=""
       tal:define="view context/@@multiparagraphpage_view">
      
      <h1 class="documentFirstHeading" tal:content="context/Title">Main title</h1>
      <div tal:replace="structure provider:plone.belowcontenttitle" />
      
      <p class="documentDescription hiddenStructure"
	 tal:content="context/Description"
	 tal:condition="context/Description">
	Description
      </p>

      <div tal:replace="structure provider:plone.abovecontentbody" />          
      <tal:slots  tal:define="paragraphs view/getSlotsContent">
	
	<tal:paragraphs repeat="p paragraphs">
	  <tal:count tal:define="nr repeat/p/index">
	    <div tal:condition="python: nr ==0">
	      <tal:paragraph
		 tal:replace="structure p" />
	    </div>
	    <div tal:condition="python: nr &gt; 0"
		 class="paragraph-bottom"
		 tal:attributes="class python:test(nr % 2 == 1, 'paragraph-left', 'paragraph-right')">
	      <tal:paragraph
		 tal:replace="structure p" />
	    </div>
	  </tal:count>
	</tal:paragraphs>
	
      </tal:slots>
      <div class="visualClear"><!-- --></div>
    </div>
    
    <div tal:replace="structure provider:plone.belowcontentbody" />

  </metal:main_macro>
</div>
</body>
</html>
