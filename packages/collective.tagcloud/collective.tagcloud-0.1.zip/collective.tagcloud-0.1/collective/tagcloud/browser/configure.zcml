<configure xmlns="http://namespaces.zope.org/zope"
           xmlns:browser="http://namespaces.zope.org/browser">

  <browser:page
     name="tagcloud"
     for="*"
     template="tagcloud.pt"
     class=".tagcloud.TagCloud"
     permission="zope2.View"
     />

  <browser:resource
     name="tagcloud.css"
     file="tagcloud.css"
     permission="zope.Public"
     />

</configure>
