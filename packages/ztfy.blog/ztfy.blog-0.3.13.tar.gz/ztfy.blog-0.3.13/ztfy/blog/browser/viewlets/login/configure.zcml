<configure
	xmlns="http://namespaces.zope.org/browser"
	xmlns:z3c="http://namespaces.zope.org/z3c"
	i18n_domain="ztfy.blog">

	<viewlet
		name="login"
		for="*"
		manager="ztfy.blog.browser.viewlets.properties.interfaces.IPropertiesViewletManager"
		class=".LoginViewlet"
		permission="ztfy.ManageContent"
		layer="ztfy.blog.layer.IZTFYBlogBackLayer"
		weight="1" />

	<z3c:template
		template="login.pt"
		for=".LoginViewlet"
		layer="ztfy.blog.layer.IZTFYBlogBackLayer" />

</configure>