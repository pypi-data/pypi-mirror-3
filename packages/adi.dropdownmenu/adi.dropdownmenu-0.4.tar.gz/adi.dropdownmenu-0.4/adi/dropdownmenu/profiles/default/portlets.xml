<?xml version="1.0"?>
<portlets>

 <!-- Assign sitemap-portlet above columns -->
 <assignment name="navigation-extended" category="context" key="/"
    manager="ContentWellPortlets.InHeaderPortletManager1"
    type="collective.portlet.sitemap.NavigationExtendedPortlet"
    visible="True">
  <property name="siteMapDepth">4</property>
  <property name="name">navigation-extended</property>
  <property name="displayAsSiteMap">True</property>
  <property name="bottomLevel">0</property>
  <property name="topLevel">0</property>
  <property name="currentFolderOnly">False</property>
  <property name="includeTop">False</property>
  <property name="root"/>
 </assignment>

 <!-- Deassign sitemap-portlet in left column
      (assigned by collective.portlet.sitemap) -->
 <assignment remove="True" name="navigation-extended" category="context" key="/" 
    manager="plone.leftcolumn" 
    type="collective.portlet.sitemap.NavigationExtendedPortlet">
 </assignment>      

</portlets>

