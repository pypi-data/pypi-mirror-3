<tal:block i18n:domain="plone">

  <dl class="portlet">
    <dt class="portletHeader">
      <span class="portletTopLeft"></span>
      <span class="tile"
         i18n:translate="tag_cloud">Tag Cloud</span>
      <span class="portletTopRight"></span>
    </dt>

    <dd class="portletItem">
      <tal:block repeat="item python:view.subjects()">
        <tal:block define="subject python:item[0];
                           size python:item[1];
                           link python:item[2]">
          <a tal:attributes="style string: font-size:${size}%; 
                             href link;"
              class="TagCloudItem" tal:content="subject" />
</tal:block>
</tal:block>
</dd>
</dl>
</tal:block>
