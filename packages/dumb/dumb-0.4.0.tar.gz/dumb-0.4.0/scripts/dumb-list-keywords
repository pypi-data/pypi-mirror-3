import optparse, os, logging
import dumb

def get_keywords(directory):
    collection = dumb.Collection(directory)
    collection.load()
    return collection.get_keywords()

def main():
    logging.getLogger('dumb').addHandler(logging.StreamHandler())
    parser = optparse.OptionParser()
    parser.add_option('--verbose','-v',action="store_true")
    opt, args = parser.parse_args()
    directory = os.path.curdir
    if len(args) == 1 :
        directory = args[0]
    elif len(args) == 0:
        directory = "."
    else:
        exit("Usage: dumb-list-keywords [directory]]")
    if opt.verbose != None:
        logging.getLogger('dumb').setLevel(logging.INFO)

    for keyword in get_keywords(directory):
        print keyword

if __name__ == '__main__': main()
