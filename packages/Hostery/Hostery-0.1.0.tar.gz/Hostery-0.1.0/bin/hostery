#!/usr/bin/env python
from argparse import ArgumentParser
from hostery import *

def main():
  parser = ArgumentParser(description='Uploads git commits to an FTP server.')
  parser.add_argument('cmd', metavar='mark|init')
  parser.add_argument('-g', action="store_true", default=False, help='Skip git push / pull')
  args = parser.parse_args()
  if args.cmd == 'init':
    init()
  elif args.cmd == 'mark':
    mark(git=not args.g)


if __name__ == '__main__':
  main()