<h1 xmlns:tal="http://xml.zope.org/namespaces/tal"
    xmlns:i18n="http://xml.zope.org/namespaces/i18n"
    class="firstHeading" tal:condition="viewlet.name">
  <span tal:replace="viewlet.name" />
  <em tal:condition="viewlet.description"
      tal:content="viewlet.description" />
  <a href="" class="id"
     tal:condition="viewlet.id"
     tal:attributes="href path:context/@@absolute_url">
    <small>#<span tal:replace="viewlet.id" /></small>
  </a>
</h1>