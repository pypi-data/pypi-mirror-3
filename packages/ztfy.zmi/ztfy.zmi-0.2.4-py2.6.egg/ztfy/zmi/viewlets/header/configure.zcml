	xmlns:z3c="http://namespaces.zope.org/z3c"
	i18n_domain="ztfy.blog">

	<viewlet
		name="breadcrumbs"
		for="*"
		manager="ztfy.blog.browser.viewlets.header.interfaces.IHeaderViewletManager"
		class=".crumbs.BreadcrumbsViewlet"
		permission="zope.View"
		layer="ztfy.zmi.layer.IZMILayer" />

	<z3c:template
		template="crumbs.pt"
		for=".crumbs.BreadcrumbsViewlet"
		layer="ztfy.zmi.layer.IZMILayer" />

</configure>