<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      i18n:domain="plone">
  <head><title></title></head>
  <body>

    <!-- Lines Widgets -->
    <metal:view_macro define-macro="view" tal:repeat="item accessor">
      <span tal:content="structure item"/>
       <tal:notlast tal:condition="not: repeat/item/end">
          <hr/>
       </tal:notlast>
    </metal:view_macro>

 
    <!-- Rich Widgets -->

    <metal:define define-macro="edit">
      <metal:use use-macro="field_macro | here/widgets/field/macros/edit">
        <metal:fill fill-slot="widget_body"
                    tal:define="binary python: False;
                                formValues python:field.extractFromForm(request.form);
                                formValueTuples python:formValues and enumerate(formValues) or ();
                                valueTuples2 python: formValueTuples and formValueTuples or (hasattr(here, 'getParagraphsFromSlots') and here.getParagraphsFromSlots() or ());
                                valueTuples python:valueTuples2 and valueTuples2 or (field.get(context) and enumerate(field.get(context)) or [(0, ''),(1, '')]);
                                member context/portal_membership/getAuthenticatedMember;
                                wysiwyg_editor python:member.getProperty('wysiwyg_editor', '').lower() or context.portal_properties.site_properties.getProperty('default_editor', '').lower();
                                ">
  <tal:block tal:repeat="valueTuple valueTuples">
            <tal:fieldName tal:define="fieldName field/getHashedName;
                                       value python:valueTuple[1];
                                       valueIndex python:valueTuple[0]">
              <h3><tal:block i18n:translate="multiparagraphpage_paragraph_no" i18n:domain="valentine.multiparagraphpage">Paragraph no</tal:block> <tal:block tal:content="repeat/valueTuple/number"/></h3>
              <input type="hidden" 
                     tal:attributes="name  python:'__order__%s'%(fieldName);
                                     value valueIndex"/>
              <tal:area_format tal:condition="widget/allow_format_edit | python:1">
                  <metal:block use-macro="here/widgets/visual/macros/area_format" />
              </tal:area_format>
              <metal:use use-macro="here/widgets/epoz/macros/edit_area">
                <metal:fill fill-slot="text_format"/>
              </metal:use>
              <hr/>
            </tal:fieldName>  
          </tal:block>
          <div id="newparagraph" tal:define="noParagraphs python:len(valueTuples);
                                             inputname field/getHashedName;
                                             kupuTimeoutScript string:initPloneKupu('kupu-editor-${inputname}');
                                             tinymceTimeoutScript string:jq.getScript('tiny_mce_gzip.js');
                                             timeoutScript python:wysiwyg_editor=='kupu' and kupuTimeoutScript or (wysiwyg_editor=='tinymce' and tinymceTimeoutScript) or ''">
            <input type="button"  tal:attributes="onclick string:jq('#newparagraph').load('${context/absolute_url}/@@newparagraph', {'noParagraphs':'$noParagraphs', 'inputname':'$inputname'}, function() { setTimeout(function() {$timeoutScript }, 300) })" value="Add paragraph">
          </div>                     
          
        </metal:fill>
      </metal:use>
    </metal:define>

    <div metal:define-macro="search">
      <div metal:use-macro="here/widgets/rich/macros/edit">
      </div>
    </div>

  </body>

</html>
