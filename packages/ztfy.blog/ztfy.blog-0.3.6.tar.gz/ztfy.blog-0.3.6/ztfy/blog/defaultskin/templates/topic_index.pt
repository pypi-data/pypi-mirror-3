<tal:var content="structure context/@@sections" />
<h1 tal:content="context/i18n:title" />
<div class="topic" i18n:domain="ztfy.blog"
	 tal:define="presentation view/presentation">
	<div class="body">
		<tal:var define="illustration context/i18n:illustration"
				 condition="illustration">
			<img tal:condition="python:presentation.illustration_position == 1"
				 tal:attributes="src string:${illustration/@@absolute_url}/++display++w128.jpeg" alt="Illustration"
				 class="illustration toleft" i18n:attributes="alt" />
			<img tal:condition="python:presentation.illustration_position == 2"
				 tal:attributes="src string:${illustration/@@absolute_url}/++display++w128.jpeg" alt="Illustration"
				 class="illustration toright" i18n:attributes="alt" />
			<div tal:condition="python:presentation.illustration_position == 3" class="centered">
				<img tal:attributes="src string:${illustration/@@absolute_url}/++display++w800.jpeg" alt="Illustration"
					 class="illustration centered" i18n:attributes="alt" />
			</div>
		</tal:var>
		<tal:loop repeat="paragraph view/renderers">
			<tal:var content="structure paragraph/render" />
		</tal:loop>
	</div>
	<div class="clearer"><!-- IE bugfix --></div>
	<tal:var replace="structure context/@@resources" />
	<tal:var replace="structure context/@@links" />
	<div class="footer">
		<tal:var replace="structure context/@@tags" />
		<div class="publication">
			<span class="label" i18n:translate="">By </span> <span class="author" tal:content="view/author/title" /> ~ 
			<span class="date" tal:define="date view/date;
										   formatter request/locale/dates;"
							   tal:condition="date" i18n:translate="">on <tal:var content="python:formatter.getFormatter('date','long').format(date)" i18n:name="date" /> - <tal:var content="python:formatter.getFormatter('time','short').format(date)" i18n:name="time" /></span>
		</div>
		<tal:var replace="structure context/@@comments" />
	</div>
</div>