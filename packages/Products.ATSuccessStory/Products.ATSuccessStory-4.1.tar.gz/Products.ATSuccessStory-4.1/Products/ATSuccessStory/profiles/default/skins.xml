<?xml version="1.0"?>

<object name="portal_skins"
        meta_type="Plone Skins Tool"
        allow_any="False"
        cookie_persistence="False"
        request_varname="plone_skin">

 <object name="atsuccessstory_images"
         meta_type="Filesystem Directory View"
         directory="ATSuccessStory/skins/atsuccessstory_images"/>
 <object name="atsuccessstory_templates"
         meta_type="Filesystem Directory View"
         directory="ATSuccessStory/skins/atsuccessstory_templates"/>
 <object name="atsuccessstory_styles"
         meta_type="Filesystem Directory View"
         directory="ATSuccessStory/skins/atsuccessstory_styles"/>
 
 <skin-path name="*">
  <layer insert-after="custom" 
         name="atsuccessstory_images"/>
  <layer insert-after="custom" 
         name="atsuccessstory_templates"/>
  <layer insert-after="custom" 
         name="atsuccessstory_styles"/>
 </skin-path>

</object>