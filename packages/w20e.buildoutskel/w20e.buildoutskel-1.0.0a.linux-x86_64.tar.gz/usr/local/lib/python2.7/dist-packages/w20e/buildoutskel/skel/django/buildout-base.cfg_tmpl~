[buildout]
parts = django-ajax-forms django static diazomiddleware
unzip = true
eggs = 
     hotelships
     diazo [wsgi]
 
versions = versions

develop += parts/django-ajax-forms

[django-ajax-forms]
recipe = hexagonit.recipe.download
url = http://pypi.python.org/packages/source/d/django-ajax-forms/django-ajax-forms_0.3.1.tar.gz
strip-top-level-dir = true

[versions]
django = 1.3.1

[django]
recipe = djangorecipe
settings = settings
eggs = 
     ${buildout:eggs}
     django-ajax-forms
project = hotelships
wsgi = true
wsgilog = ${buildout:directory}/../var/log/wsgi.log

[static]
recipe = iw.recipe.cmd
on_install = true
on_update = true
cmds =
     ${buildout:directory}/bin/django collectstatic --noinput

[diazo]
recipe = zc.recipe.egg
eggs =
    diazo [wsgi]
    PasteScript

[diazomiddleware]
recipe = cp.recipe.cmd
install_cmd =
    cat ${buildout:directory}/diazo_wsgi.skel >> ${buildout:directory}/bin/django.wsgi
update_cmd =
    cat ${buildout:directory}/diazo_wsgi.skel >> ${buildout:directory}/bin/django.wsgi

