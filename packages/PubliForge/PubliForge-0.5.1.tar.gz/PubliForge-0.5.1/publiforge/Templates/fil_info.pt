<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      metal:use-macro="base">
<head><title></title></head>
<body>
<div id="mainPanel" metal:fill-slot="main">
  ${form.begin()}
  <!-- ............................... Buttons ............................ -->
  <div id="buttons">
    <div>
      ${request.breadcrumbs.back_button()}
    </div>
    <hr class="hidden"/>
  </div>
  <div id="main" tal:define="join import: os.path.join">
    <h2 id="subtitle" class="${mime_type[0] == 'folder' and 'folder' or 'file'}"
        title="${mime_type[0] == 'folder' and _('Directory') or _('File')}">
      ${storage['label']}
    </h2>
    <!-- ............................. Description ........................ -->
    <div class="description">
      ${form.grid_item(None, _('Storage:'), storage['label'], hint=storage['storage_id'], class_='')}
      ${form.grid_item(None, _('Path:'), path, class_='')}
      ${form.grid_item(None, _('Name:'), filename, class_='')}
      <div class="formItem">
        <label><em>${_('MIME type:')}</em></label>
        <div>
          <img src="/Static/Images/MimeTypes/${mime_type[1] if mime_type[1] in FILE_TYPES else 'unknown'}.png" alt="${mime_type[1]}"/>
          ${mime_type[0] == 'folder' and _('Directory') or mime_type[0]}
        </div>
      </div>
    </div>
    <!-- ............................. Flash .............................. -->
    <div tal:define="flash load: flash.macro.pt" metal:use-macro="flash"/>
    <!-- ................................ Log ............................. -->
    <div class="formItem" tal:condition="log">
     <label for="log"><em>${_('Revision log:')}</em></label>
     <div id="log">
       <table class="list smallList">
         <tr>
           <th>${_('Age/Date')}</th>
           <th class="center">${_('Revision')}</th>
           <th>${_('Author')}</th>
           <th>${_('Message')}</th>
           <th class="last" tal:condition="mime_type[0] != 'folder'">${_('Actions')}</th>
         </tr>
         <tr tal:repeat="entry log">
           <td>${age(entry[0])}</td>
           <td class="center">${entry[1]}</td>
           <td>${entry[2]}</td>
           <td>${entry[3]}</td>
           <td class="last" tal:condition="mime_type[0] != 'folder'">
             <span tal:condition="mime_type[1] in TEXT_TYPES" tal:omit-tag="">
               ${form.submit_image('dif!%s' % entry[1], _('Differences with current revision'), '/Static/Images/action_diff_one.png')}
               ${form.submit_image('shw!%s' % entry[1], _('Display this revision'), '/Static/Images/action_view_one.png')}
             </span>
             ${form.button(route('file_revision', storage_id=storage['storage_id'], path=join(path, filename), revision=entry[1]), src='/Static/Images/action_download_one.png', title=_('Download this revision'))}
           </td>
         </tr>
       </table>
       <div class="listPager smallList">
         <div class="last">
           ${_('Log size:')} ${form.select('page_size', '', page_sizes, True)}
         </div>
       </div>
     </div>
     <!-- ............................... Content ......................... -->
     <fieldset id="content" tal:condition="content">
       <legend>
         ${content['label']}
         ${form.button(route(content['route'], storage_id=storage['storage_id'], path=join(path, filename), revision=content['revision']), src='/Static/Images/action_download_one.png', title=_('Download file'))}
       </legend>
       <pre>${content['file']}</pre>
     </fieldset>
   </div>
 </div>
  ${form.end()}
</div>  
</body>
</html>