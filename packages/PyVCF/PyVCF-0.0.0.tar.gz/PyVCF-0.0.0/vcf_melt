#!/usr/bin/env python
""" Melt a VCF file into a tab delimited set of calls, one per line

VCF files have all the calls from different samples on one line.  This 
script reads vcf on stdin and writes all calls to stdout in tab delimited 
format with one call in one sample per line.  This makes it easy to find 
a given sample's genotype with, say, grep.
"""

import sys
import csv
import vcf

out = csv.writer(sys.stdout, delimiter='\t')
reader = vcf.VCFReader(sys.stdin)

formats = sorted(reader.formats.keys())
infos = sorted(reader.infos.keys())


def flatten(x):
    if type(x) == type([]): 
        x = ','.join(map(str, x))
    return x


if '--sites' in sys.argv:
    header = ['CHROM', 'POS', 'REF', 'ALT', 'ID', 'FILTER'] + ['info.'+ x for x in infos]
    out.writerow(header)    
    for record in reader: 
        info_row = [flatten(record.INFO.get(x, None)) for x in infos]
        fixed = [record.CHROM, record.POS, record.REF, record.ALT, record.ID, record.FILTER] 
        out.writerow(fixed + info_row)

else:

    header = ["SAMPLE"] + formats + ['CHROM', 'POS', 'REF', 'ALT', 'ID', 'FILTER'] + ['info.'+ x for x in infos]
    out.writerow(header)    
    for record in reader: 
        info_row = [flatten(record.INFO.get(x, None)) for x in infos]
        fixed = [record.CHROM, record.POS, record.REF, record.ALT, record.ID, record.FILTER]
    
        for sample in record.samples: 
            row = [sample['name']]
            row += [flatten(sample.get(x, None)) for x in formats]
            row += fixed
            row += info_row
            out.writerow(row)
