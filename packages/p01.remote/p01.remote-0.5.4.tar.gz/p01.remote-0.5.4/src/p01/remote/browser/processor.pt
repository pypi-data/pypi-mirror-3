<div metal:use-macro="macro:form">
  <div metal:fill-slot="info"></div>
  <div metal:fill-slot="main"
       tal:define="batch view/renderBatch">
    <ul class="errors"
        tal:condition="view/errors"
        metal:define-macro="errors">
      <li tal:repeat="error view/errors">
        <span tal:replace="structure error">Error</span>
      </li>
    </ul>
    <div>
      <tal:block replace="structure view/renderTable">
        table
      </tal:block>
    </div>
    <div class="batch" tal:condition="batch">
      <tal:block replace="structure batch">
        table
      </tal:block>
    </div>
  </div>
  <div class="tableButtons" metal:fill-slot="buttons">
    <div class="tableButtonRight">
    <input type="submit"
           tal:condition="nocall:view/actions/removeCompleted | nothing"
           tal:replace="structure view/actions/removeCompleted/render"
           />
    <input type="submit"
           tal:condition="nocall:view/actions/removeError | nothing"
           tal:replace="structure view/actions/removeError/render"
           />
    <input type="submit"
           tal:condition="nocall:view/actions/removeCancelled | nothing"
           tal:replace="structure view/actions/removeCancelled/render"
           />
    <input type="submit"
           tal:condition="nocall:view/actions/removeAll | nothing"
           tal:replace="structure view/actions/removeAll/render"
           />
    <input type="submit"
           tal:condition="nocall:view/actions/cancel | nothing"
           tal:replace="structure view/actions/cancel/render"
           />
    <input type="submit"
           tal:condition="nocall:view/actions/cancelAll | nothing"
           tal:replace="structure view/actions/cancelAll/render"
           />
    </div>
    <div class="tableButtonLeft">
    <input type="submit"
           tal:condition="nocall:view/actions/start | nothing"
           tal:replace="structure view/actions/start/render"
           />
    <input type="submit"
           tal:condition="nocall:view/actions/stop | nothing"
           tal:replace="structure view/actions/stop/render"
           />
    </div>
  </div>
</div>
