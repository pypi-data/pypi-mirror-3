<tal:resources define="js context.js;
                       css context.css;">

  <!-- javascripts -->
  <tal:public repeat="res js">
    <script src="${res}"></script>
  </tal:public>

  <!-- stylesheets -->
  <tal:public repeat="res css">
    <link href="${res}"
          rel="stylesheet" type="text/css" media="screen" />
  </tal:public>

</tal:resources>