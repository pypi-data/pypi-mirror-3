<tal:block i18n:domain="collective.portlet.lingualinks">

<dl class="portlet portletLanguageLinks">
    <dt class="portletHeader">
        <span class="portletTopLeft"></span>
        <span class="tile" i18n:translate="box_languages">Translations</span>
        <span class="portletTopRight"></span>
    </dt>

    <dd class="portletItem">
        <ul>
            <li tal:repeat="link view/get_links">

                    <a href=""
                       tal:define="name link/name"
                       tal:attributes="href link/url;
                                       title name">
                        <span tal:replace="name">Native language name</span>
                    </a>

            </li>
        </ul>

        <span class="portletBottomLeft"></span>
        <span class="portletBottomRight"></span>
    </dd>
</dl>
</tal:block>
