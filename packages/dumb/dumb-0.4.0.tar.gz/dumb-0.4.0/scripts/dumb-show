import sys,optparse,logging
import dumb

def main():
    logging.getLogger('dumb').addHandler(logging.StreamHandler())
    parser = optparse.OptionParser()
    parser.add_option('--verbose','-v',action="store_true")
    opt, arg = parser.parse_args()
    
    if len(arg) > 0:
        bm_id = arg[0]
        if len(arg) > 1:
            directory = arg[1]
        else:
            directory = '.'
    else:
        sys.exit('Usage:  dumb-show id [collection]')
    if opt.verbose != None:
        logging.getLogger('dumb').setLevel(logging.INFO)

    collection = dumb.Collection(directory)
    collection.load()
    for bm in collection.fuzzy_get(bm_id):
        print bm
        print '---'


if __name__ == '__main__': main()
