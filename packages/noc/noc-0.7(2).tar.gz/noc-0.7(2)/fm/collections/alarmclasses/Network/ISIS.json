[
    {
        "name": "Network | IS-IS | Adjacency Down",
        "description": "IS-IS adjacency down",
        "is_unique": true,
        "discriminator": ["level", "neighbor"],
        "user_clearable": true,
        "default_severity__name": "WARNING",
        "vars": [
            {
                "name": "level",
                "description": "Level",
                "type": "str",
                "required": true
            },
            
            {
                "name": "interface",
                "description": "Interface",
                "type": "interface_name",
                "required": true
            },
            
            {
                "name": "neighbor",
                "description": "Neighbor's NSAP or name",
                "type": "str",
                "required": true
            },
            
            {
                "name": "reason",
                "description": "Adjacency lost reason",
                "type": "str",
                "required": true
            }
        ],
        "text": {
            "en": {
                "subject_template": "IS-IS lost {{level}} adjacency to {{neighbor}}. Reason: {{reason}}",
                "body_template": "IS-IS lost {{level}} adjacency to {{neighbor}}\nReason: {{reason}}",
                "symptoms": "Routing table changes and possible lost of connectivity",
                "probable_causes": "Link failure or protocol misconfiguration",
                "recommended_actions": "Check links and local and neighbor router configuration"
            }
        },
        "root_cause": [
            {
                "name": "Link Down",
                "root__name": "Network | Link | Link Down",
                "window": 10,
                "match_condition": {
                    "managed_object": "alarm.managed_object.id",
                    "vars__interface": "alarm.managed_object.profile.root_interface(alarm.vars['interface'])"
                }
            }
        ]
    }
]
