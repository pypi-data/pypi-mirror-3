<tal:tabs tal:condition="view/portal_tabs" i18n:domain="plone">

  <div id="portal-globalnav-footer-wrapper">
  <ul id="portal-globalnav-footer">
    <tal:tabs tal:repeat="tab view/portal_tabs">
      <li tal:attributes="id python:repeat['tab'].end and 'footer-last-tab' or None;
                          class python:view.selected_portal_tab==tab['id'] and 'selected' or None">
        <a href="" 
           tal:content="tab/name"
           tal:attributes="href tab/url;
                           title tab/description|nothing">Tab Name</a></li></tal:tabs>
  </ul>
  </div>

</tal:tabs>