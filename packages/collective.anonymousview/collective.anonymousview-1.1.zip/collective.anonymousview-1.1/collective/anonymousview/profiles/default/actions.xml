<?xml version="1.0"?>
<object name="portal_actions" meta_type="Plone Actions Tool"
   xmlns:i18n="http://xml.zope.org/namespaces/i18n"
   i18n:domain="collective.anonymousview">
    <object name="object" meta_type="CMF Action Category">
        <object name="anonymousview" meta_type="CMF Action" i18n:domain="collective.anonymousview">
           <property name="title" i18n:translate="">Anonymous View</property>
           <property name="description" i18n:translate="">View the current page as if you are an anonymous user</property>
           <property name="url_expr">string:${object_url}/@@anonymousview</property>
           <property name="icon_expr"></property>
           <property name="permissions">
            <element value="Modify portal content"/>
           </property>
           <property name="visible">True</property>
        </object>
    </object>
</object>