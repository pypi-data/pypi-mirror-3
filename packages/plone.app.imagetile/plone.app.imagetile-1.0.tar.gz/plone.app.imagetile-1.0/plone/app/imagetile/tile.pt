<html xmlns="http://www.w3.org/1999/xhtml"
  xmlns:tal="http://xml.zope.org/namespaces/tal"
  xmlns:i18n="http://xml.zope.org/namespaces/i18n"
  xml:lang="en" lang="en" i18n:domain="plone">

<body tal:define="image_url view/image_url;
                  image_title options/title|nothing;
                  image_description options/description|nothing;">

  <div class="tile-image">
    <img tal:condition="image_url"
         tal:attributes="src image_url; alt image_title;" />
    <h3 tal:condition="image_title" tal:content="image_title" />
    <p tal:condition="image_description" tal:content="image_description" />
  </div>

</body>
</html>
