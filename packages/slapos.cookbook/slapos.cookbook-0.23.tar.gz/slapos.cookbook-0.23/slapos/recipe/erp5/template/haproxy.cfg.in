global
  maxconn 4096

defaults
  log global
  mode  http
  option  httplog
  option  dontlognull
  retries 1
  option redispatch
  maxconn 2000
  timeout server 3000s
  timeout queue 5s
  timeout connect 10s
  timeout client 3600s

listen %(name)s %(ip)s:%(port)s
  cookie  SERVERID insert
  balance roundrobin

%(server_text)s

  option httpchk GET %(server_check_path)s

  stats uri /haproxy
  stats realm Global\ statistics
