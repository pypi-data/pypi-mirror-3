<?xml version="1.0"?>
<object name="portal_actions" meta_type="Plone Actions Tool"
   xmlns:i18n="http://xml.zope.org/namespaces/i18n">
 <object name="object" meta_type="CMF Action Category">

<!--
The reason we're re-registering the action here is so that in both supported versions of
Plone this "slideshow settings" tab is the last one appearing.  These versions of Plone seem to
vary where they stick actions in the "object" category (and Plone 3.0 didn't seem to render the
category "object_tabs" at all).
-->

  <object name="slideshow_settings" meta_type="CMF Action" i18n:domain="plone">
   <property name="title" i18n:translate="slideshowfolder_tab_slideshow_settings">Slideshow Settings</property>
   <property name="description" i18n:translate=""></property>
   <property
      name="url_expr">string:${globals_view/getCurrentFolderUrl}/@@slideshow-settings</property>
   <property name="icon_expr"></property>
   <property name="available_expr">object/@@folder_slideshow_view/isSlideshow</property>
   <property name="permissions">
    <element value="Slideshowfolder: Manage slideshow settings"/>
   </property>
   <property name="visible">True</property>
  </object>

 </object>
</object>