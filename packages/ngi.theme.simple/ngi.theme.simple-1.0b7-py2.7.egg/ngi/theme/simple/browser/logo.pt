<a metal:define-macro="portal_logo"
   id="portal-logo"
   title="Home"
   accesskey="1"
   tal:define="logo_size view/getLogoSize"
   tal:attributes="href view/navigation_root_url"
   i18n:domain="ngi.theme.simple"
   i18n:attributes="title">
    <img src="logo.jpg" alt=""
         tal:attributes="src string:${view/navigation_root_url}/@@logo_data;
         					width logo_size/width;
         					height logo_size/height;" /></a>
