<?xml version="1.0"?>

<object name="portal_skins"
        meta_type="Plone Skins Tool"
        allow_any="False"
        cookie_persistence="False"
        request_varname="plone_skin">

 <object name="ecgraphbox_images"
         meta_type="Filesystem Directory View"
         directory="ECGraphBox/skins/ecgraphbox_images"/>
 <object name="ecgraphbox_styles"
         meta_type="Filesystem Directory View"
         directory="ECGraphBox/skins/ecgraphbox_styles"/>
 <object name="ecgraphbox_templates"
         meta_type="Filesystem Directory View"
         directory="ECGraphBox/skins/ecgraphbox_templates"/>
 
 <skin-path name="*">
  <layer insert-after="custom" 
         name="ecgraphbox_images"/>
  <layer insert-after="custom" 
         name="ecgraphbox_styles"/>
  <layer insert-after="custom" 
         name="ecgraphbox_templates"/>
 </skin-path>

</object>