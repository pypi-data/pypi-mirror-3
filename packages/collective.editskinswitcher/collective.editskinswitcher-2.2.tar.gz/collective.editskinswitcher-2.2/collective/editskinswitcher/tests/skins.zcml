<configure
    xmlns="http://namespaces.zope.org/zope"
    xmlns:cmf="http://namespaces.zope.org/cmf"
    xmlns:browser="http://namespaces.zope.org/browser"
    i18n_domain="collective.editskinswitcher">

  <interface
      interface=".interfaces.IMyTheme"
      type="zope.publisher.interfaces.browser.IBrowserSkinType"
      name="Monty Python Skin"
      />

  <browser:viewletManager
      name="monty.manager"
      provides=".interfaces.IMontyManager"
      permission="zope.Public"
      class="plone.app.viewletmanager.manager.BaseOrderedViewletManager"
      />

  <browser:page
      for="*"
      name="viewlet-test"
      template="show_viewlet.pt"
      permission="zope.Public"
      />

  <!-- Be careful which viewlet manager you pick here, as for example
       when you register this for IPortalTop you suddenly can get a
       KeyError logo.jpg, which is very weird and can send you on a
       wild goose chase. -->
  <browser:viewlet
      name="montypython.knights"
      manager=".interfaces.IMontyManager"
      template="viewlet.pt"
      permission="zope.Public"
      layer=".interfaces.IMyTheme"
      />

  <browser:viewlet
      name="layers"
      manager=".interfaces.IMontyManager"
      class=".browser.ShowInterfaces"
      permission="zope.Public"
      />

  <cmf:registerDirectory
      name="editskinswitcher_tests"
      directory="skins/editskinswitcher_tests"
      recursive="False" />

  <cmf:registerDirectory
      name="editskinswitcher_edit_content"
      directory="skins/editskinswitcher_edit_content"
      recursive="False" />

</configure>
