#! /bin/csh -f

# for pypi upload, use
#    /usr/local/bin/python setup.py sdist upload
# see /Users/jstroud/Abeta/oligomer-paper/Figures/Simulations-2/.radialx

# change setup.py too!
set PVER="0.2.6rc"

cd ${HOME}/Code/pygmyplot

cd docsrc/
make clean
make html
make latexpdf
cd ..
rm -rf ./html
cp -r docsrc/_build/html ./html
cp docsrc/_build/latex/pygmyplot.pdf ./
/usr/local/bin/python setup.py sdist
# sudo /usr/local/bin/easy_install dist/pygmyplot-${PVER}.tar.gz
