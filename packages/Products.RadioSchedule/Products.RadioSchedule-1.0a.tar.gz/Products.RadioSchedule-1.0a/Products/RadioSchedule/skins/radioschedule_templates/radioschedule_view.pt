<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="here/main_template/macros/master"
      i18n:domain="Radioschedule">

<body>
    <div metal:fill-slot="main">
        <div tal:replace="structure provider:plone.abovecontenttitle" />

        <h1 class="documentFirstHeading" tal:content="context/title">Title</h1>
        <div tal:replace="structure provider:plone.belowcontenttitle" />        

        <p class="documentDescription" tal:content="context/Description"></p>

        <div tal:replace="structure provider:plone.abovecontentbody" />    

        <div tal:repeat="day context/get_selected_days">
        
            <h3>
                <a href="" tal:attributes="href day/absolute_url" tal:content="day/Title">Title</a>
            </h3>

            <div tal:repeat="show day/get_radioshows">
                <p><span tal:content="show/start_time" /> - <span tal:content="show/end_time" />:
                <a href="" tal:attributes="href show/absolute_url"
                           tal:content="show/title">Show title</a>
                </p>
            </div>
            <br />
        </div>        

        <div tal:replace="structure provider:plone.belowcontentbody" />        

    </div>
</body>
</html>
