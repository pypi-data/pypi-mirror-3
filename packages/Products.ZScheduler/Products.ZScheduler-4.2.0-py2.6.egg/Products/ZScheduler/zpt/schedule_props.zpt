<html tal:replace="structure container/manage_page_header"/>

    <span tal:replace="structure here/manage_tabs"/>

  <br/>
 
  <table cellpadding="10" width="100%">

     <form action="manage_editProperties" method="post">
       <table cellpadding="0" cellspacing="2" width="100%">
         <tr>
             <td class="form-label">Timezone</td>
             <td class="form-element">
                  <select name="tz">
                     <span tal:repeat="tz here/timezones">
                        <option tal:condition="python: here.tz == tz"
                             tal:content="python: tz" selected/>
                        <option tal:condition="python: here.tz != tz"
                             tal:content="python: tz"/>
                     </span>
                  </select>
              </td>
         </tr>
         <tr>
             <td class="form-label">Valid Callables</td>
             <td class="form-element">
                  <select name="callables" multiple size="5">
                     <option tal:repeat="product module['Products']"
                             tal:content="product/meta_type"
                             tal:attributes="selected python: product in here.callables"/>
                  </select>
             </td>
         <tr>
                <td class="form-element"><input type="submit" value=" Change "></td>
         </tr>
       </table>
    </form>

  </table>

<html tal:replace="structure container/manage_page_footer"/>
