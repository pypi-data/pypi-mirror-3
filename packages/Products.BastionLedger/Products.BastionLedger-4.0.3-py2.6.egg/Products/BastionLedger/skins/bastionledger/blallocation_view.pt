<html xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="bastionledger">
 
<body>
  <div metal:fill-slot="main"
       tal:define="definition context/getDefinition;
                   utool context/@@plone_portal_state/portal_url;">

      <h1><img src="" alt="" tal:define="icon python:context.getIcon(1)" 
               tal:attributes="src string:${utool}/${icon}">&nbsp;<span tal:replace="context/Title | context/getId"/></h1>

        <a href=""
           class="link-parent"
           tal:define="parent_url python:context.navigationParent(context, template.getId())"
           tal:condition="parent_url"
           tal:attributes="href parent_url"
           i18n:translate="go_to_parent_url">
         Up to Shareholder
        </a>

        <tal:byline tal:on-error="string:">
           <div tal:replace="structure provider:plone.belowcontenttitle"/>
        </tal:byline>

         <p tal:content="context/Description | definition/Description"/>

         <div class="label">Share</div>
         <div class="field" tal:content="definition/title_or_id"/>

         <div class="label">Face Value</div>
         <div class="field" tal:content="definition/face"/>

         <div class="label">Quantity</div>
         <div class="field" tal:content="context/quantity"/>

         <div class="label">Issued</div>
         <div class="field" tal:content="context/issue_date"/>

         <div class="label">Nominal Value</div>
         <div class="field" tal:content="context/nominal"/>

         <div class="label">Percentage paid</div>
         <div class="field" tal:content="context/percentage_paid"/>

         <div class="label">Outstanding</div>
         <div class="field" tal:content="context/outstanding"/>

      <div tal:replace="structure provider:plone.documentactions">
           Document actions (print, sendto etc)
      </div>

  </div>
 
</body>
</html>
