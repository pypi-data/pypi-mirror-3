<dl class="portlet portletTextZoomPortlet"
    i18n:domain="xhostplus.textzoom">

    <dt class="portletHeader">
        <span class="portletTopLeft"></span>
        <span i18n:translate="">
           Text size
        </span>
        <span class="portletTopRight"></span>
    </dt>

    <dd class="portletItem odd">
        <ul tal:define="portal_url context/@@plone_portal_state/portal_url;">
            <noscript>
                <li i18n:translate="">This requires JavaScript</li>
            </noscript>
            <li>
                <a href="javascript:setBaseFontSize('smallText',1);" title="Set to small text"
                   i18n:attributes="title">
                    <img src="" alt="Set to small text" 
                         tal:attributes="src string:${portal_url}/++resource++xhostplus.textzoom.images/fs_small.png" 
                         i18n:attributes="alt"/>
                </a>
            </li>
            <li>
                <a href="javascript:setBaseFontSize('',1);" title="Set to normal text"
                   i18n:attributes="title">
                    <img src="" alt="Set to normal text" 
                         tal:attributes="src string:${portal_url}/++resource++xhostplus.textzoom.images/fs_normal.png" 
                         i18n:attributes="alt"/>
                </a>
            </li>
            <li>
                <a href="javascript:setBaseFontSize('largeText',1);" title="Set to large text"
                   i18n:attributes="title">
                    <img src="" alt="Set to large text" 
                         tal:attributes="src string:${portal_url}/++resource++xhostplus.textzoom.images/fs_big.png" 
                         i18n:attributes="alt"/>
                </a>
            </li>
        </ul>
    </dd>

</dl>
