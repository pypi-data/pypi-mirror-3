<?xml version="1.0"?>
<object name="portal_skins" allow_any="False" cookie_persistence="False"
   default_skin="Colorful World Theme">

 <object name="colorfulworld_images"
    meta_type="Filesystem Directory View"
    directory="plonetheme.colorfulworld:skins/colorfulworld_images"/>
 <object name="colorfulworld_styles"
    meta_type="Filesystem Directory View"
    directory="plonetheme.colorfulworld:skins/colorfulworld_styles"/>

 <skin-path name="Colorful World Theme" based-on="Sunburst Theme">
  <layer name="colorfulworld_images"
     insert-after="custom"/>
  <layer name="colorfulworld_styles"
     insert-after="colorfulworld_images"/>
 </skin-path>

</object>
