<?xml version="1.0"?>
<object name="portal_actions" meta_type="Plone Actions Tool">
 <action-provider name="portal_actions">

  <action title="Make slideshow" action_id="makeSlideshow" category="object_buttons"
     condition_expr="not: object/@@folder_slideshow_view/isSlideshow"
     url_expr="string:${object_url}/@@folder_slideshow_view/makeSlideshow" visible="True">
   <permission>Slideshowfolder: Manage slideshow settings</permission>
  </action>

  <action title="Disable slideshow" action_id="unmakeSlideshow" category="object_buttons"
     condition_expr="object/@@folder_slideshow_view/isSlideshow"
     url_expr="string:${object_url}/@@folder_slideshow_view/unmakeSlideshow" visible="True">
   <permission>Slideshowfolder: Manage slideshow settings</permission>
  </action>

  <action title="Slideshow Settings" action_id="slideshow_settings" category="object_tabs"
     condition_expr="object/@@folder_slideshow_view/isSlideshow"
     url_expr="string:${object_url}/@@slideshow-settings" visible="True">
   <permission>Slideshowfolder: Manage slideshow settings</permission>
   </action>

</action-provider>
</object>