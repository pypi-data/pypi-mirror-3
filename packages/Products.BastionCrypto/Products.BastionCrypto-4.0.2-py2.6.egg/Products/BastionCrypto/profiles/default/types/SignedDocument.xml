<?xml version="1.0"?>
<object name="SignedDocument"
   meta_type="Factory-based Type Information with dynamic views"
   xmlns:i18n="http://xml.zope.org/namespaces/i18n">
 <property name="title">SignedDocument</property>
 <property name="description">SignedDocument content type.</property>
 <property name="content_icon">signed_document_icon.gif</property>
 <property name="content_meta_type">SignedDocument</property>
 <property name="product">BastionCrypto</property>
 <property name="factory">addSignedDocument</property>
 <property name="immediate_view">signed_document_edit_form</property>
 <property name="global_allow">True</property>
 <property name="filter_content_types">True</property>
 <property name="allowed_content_types"/>
