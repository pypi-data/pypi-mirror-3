<?xml version="1.0"?>
<object
    name="portal_controlpanel"
    xmlns:i18n="http://xml.zope.org/namespaces/i18n"
    i18n:domain="collective.piwik.core">

    <configlet
        title="Piwik settings"
        action_id="collective.piwik.settings"
        appId="collective.piwik"
        category="Products"
        condition_expr=""
        url_expr="string:${portal_url}/@@piwik-settings"
        icon_expr="string:${portal_url}/++resource++collective.piwik.images/piwik_logo.ico"
        visible="True"
        i18n:attributes="title">
            <permission>Manage portal</permission>
    </configlet>

</object>
