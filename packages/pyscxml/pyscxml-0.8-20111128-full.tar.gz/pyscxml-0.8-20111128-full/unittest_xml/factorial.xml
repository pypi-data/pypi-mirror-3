<scxml xmlns="http://www.w3.org/2005/07/scxml" initial="loop" >
	<datamodel>
		<data id="x" expr="6"/>
		<data id="fac" expr="1"/>
	</datamodel>  
	<state id="loop">
		<onentry>
		</onentry>
        <transition cond="x &gt; 1">
			<assign location="fac" expr="x * fac"/>
			<assign location="x" expr="x-1"/>
		</transition>
		<transition target="result" />
    </state>
   <final id="result"/>
</scxml>




