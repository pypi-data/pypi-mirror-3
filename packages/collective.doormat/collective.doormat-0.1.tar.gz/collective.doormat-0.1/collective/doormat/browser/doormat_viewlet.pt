<div id="c-doormat" class="row">
  <div id="c-doormat-header" tal:content="structure view/header"
    tal:condition="view/header">
  Doormat Header
  </div>
  <div id="c-doormat-sitemap">
    <tal:loop tal:repeat="section view/sections">
      <dl>
        <dt>
            <a tal:attributes="href section/url"
            tal:omit-tag="not:section/url"
            tal:content="section/name"> Title</a>
        </dt>
        <dd tal:content="structure section/text">
          Dormat Sitemap section contents
        </dd>
      </dl>
    </tal:loop>
  </div>
  <div id="c-doormat-footer" tal:content="structure view/footer"
    tal:condition="view/footer">
  Dormat Footer
  </div>
</div>
