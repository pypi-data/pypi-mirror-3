<?xml version="1.0"?>

<object name="portal_skins"
        meta_type="Plone Skins Tool"
        allow_any="False"
        cookie_persistence="False"
        request_varname="plone_skin">

 <object name="radioschedule_images"
         meta_type="Filesystem Directory View"
         directory="RadioSchedule/skins/radioschedule_images"/>
 <object name="radioschedule_styles"
         meta_type="Filesystem Directory View"
         directory="RadioSchedule/skins/radioschedule_styles"/>
 <object name="radioschedule_templates"
         meta_type="Filesystem Directory View"
         directory="RadioSchedule/skins/radioschedule_templates"/>
 
 <skin-path name="*">
  <layer insert-after="custom" 
         name="radioschedule_images"/>
  <layer insert-after="custom" 
         name="radioschedule_styles"/>
  <layer insert-after="custom" 
         name="radioschedule_templates"/>
 </skin-path>

</object>