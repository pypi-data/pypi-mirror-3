<?xml version="1.0"?>
<object
    name="portal_controlpanel"
    xmlns:i18n="http://xml.zope.org/namespaces/i18n"
    i18n:domain="ngi.site.notification"
    purge="False">
    
    <configlet
        title="Notification Settings"
        action_id="notification_settings"
        appId="ngi.site.notification" 
        category="Products"
        condition_expr=""
        url_expr="string:${portal_url}/@@notification-settings"
        icon_expr="string:${portal_url}/++resource++ngi.site.notification.icon.gif"
        visible="True"
        i18n:attributes="title">
            <permission>Manage portal</permission>
    </configlet>

</object>