<div id="atimage_transformtoolbar"
     tal:define="transformations here/getTransformMap|nothing"
     tal:condition="view/available"
     i18n:domain="atcontenttypes">

  <span class="label" i18n:translate="label_transform">Transform</span>
  <tal:link repeat="transform transformations">
  <tal:block define="value transform/value; name transform/name">

  <a href="" title=""
     tal:attributes="href string:${here/absolute_url}/@@transform?method:int=${value};
                     title name"
     i18n:attributes="title">
    <img src="" alt=""
         tal:attributes="src string:${view/portal_url}/++resource++collective.atimage.transformtoolbar/transform-${value}.gif;
                         alt name"
         i18n:attributes="alt" />

  </a>
  </tal:block>
  </tal:link>

</div>
