<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      lang="en"
      i18n:domain="slideshowfolder">
<body>
    
<tal:slideshow_macro metal:define-macro="slideshow">
    <tal:view
        tal:define="view context/@@slideshow_view|nothing"
        tal:condition="view">
         
        <tal:defines define="images view/getSlideshowImages;
                              size view/getSlideshowSize">
         
            <tal:hasSlides condition="images">
                <div id="myShow" class="slideshowfolder"
                    tal:attributes="style string:width: ${size/width}px;; height: ${size/height}px;;">
                    <!-- this gets replaced by the slideshow javascript -->
                </div>
                <div class="visualClear"></div>
            </tal:hasSlides>

            <tal:noSlides condition="not:images">
                <p class="discreet"
                    i18n:translate="text_no_images">
                    There are currently no images in this slideshow.
                </p>
                <p class="portalMessage"
                    tal:condition="python:checkPermission('ATContentTypes: Add Image', context)"
                    i18n:translate="message_need_images">
                    You must add images within this folder for them to show up in this slideshow.
                </p>
            </tal:noSlides>

        </tal:defines>
    </tal:view>
</tal:slideshow_macro>

</body>
</html>
