<div class="cn-breadcrumbs" tal:define="selectedCategories request/Subject | nothing">
    <span class="last" tal:omit-tag="selectedCategories">
        <a href="" tal:attributes="href python:view.getPortalUrl() + '/maatregelen'">Maatregelen</a> <span class="separator" tal:condition="selectedCategories"> > </span>
    </span>
    <span tal:repeat="crumb selectedCategories" tal:omit-tag="">
        <span class="last" tal:omit-tag="not:repeat/crumb/end">
            <a href=""  tal:attributes="href python:view.getUrlWithQueryStringUpTo(crumb, selectedCategories)">
                    <span tal:replace="crumb">Category</span>
            </a>
            <span class="separator" tal:condition="not:repeat/crumb/end"> > </span>
        </span>
    </span>
    
</div>