#. ./env
PYTHON=$HOME/local/python-dbg/bin/python2.7
ARGS+=" --suppressions=valgrind-python2.7.supp"
ARGS+=" --suppressions=/home/john/local/src/Python-2.7/Misc/valgrind-python.supp"
ARGS+=" --gen-suppressions=all"
ARGS+=" --log-file=output/valgrind.out"
#ARGS+=" --db-attach=yes"
#ARGS+=" --leak-check=yes"
#ARGS+=" --track-origins=yes"
valgrind $ARGS $PYTHON $*
