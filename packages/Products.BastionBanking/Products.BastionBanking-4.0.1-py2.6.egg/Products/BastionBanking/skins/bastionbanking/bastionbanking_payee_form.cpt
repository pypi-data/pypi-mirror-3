<html xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      metal:use-macro="here/main_template/macros/master"
      i18n:domain="bastionbanking">
 
<body>
  <div metal:fill-slot="main"
       tal:define="utool context/@@plone_portal_state/portal_url">

      <h1><img src="" alt="" tal:define="icon python: context.getIcon(1)"
               tal:attributes="src string:${utool}/${icon}">&nbsp;Payee Details</h1>

      <form action="">
       
        <div class="field"
             tal:define="error errors/payee_account|nothing;
             Payee_Account request/payee_account | here/payee_account | nothing;"
             tal:attributes="class python:test(error, 'field error', 'field')">

           <label for="order_date" i18n:translate="label_order_date">Payee Account</label>

           <span class="fieldRequired" title="Required"
                 i18n:attributes="payee_account"
                 i18n:translate="label_required">(Required)</span>

           <div class="formHelp">Enter the account details of the other party</div>

           <div tal:content="error">Validation error output</div>

           <input type="text" id="payee_account" name="payee_account" size="40" value=""
                  tal:attributes="value Payee_Account;"/>

        </div>

        <div class="field"
             tal:define="error errors/payee_instructions|nothing;
                         Payee_Instructions request/payee_instructions | here/payee_instructions | nothing;"
             tal:attributes="class python:test(error, 'field error', 'field')">

           <label for="payee_instructions" i18n:translate="label_payee_instructions">Payee Instructions</label>

           <div class="formHelp">You can enter additional payment instructions or notes here</div>

           <div tal:content="error">Validation error output</div>

           <textarea id="payee_instructions" name="payee_instructions:text"
                  rows="10" cols="80"
                  tal:content="Payee_Instructions"/>

        </div>

        <div class="formControls">
             <input class="context"  type="submit"
                    name="form.button.Edit"
                    value="Edit" i18n:attributes="value" />
        </div>

        <input type="hidden" name="form.submitted" value="1" />

      </form>

      <div tal:replace="structure provider:plone.documentactions">
           Document actions (print, sendto etc)
      </div>
  </div>
 
</body>
</html>
