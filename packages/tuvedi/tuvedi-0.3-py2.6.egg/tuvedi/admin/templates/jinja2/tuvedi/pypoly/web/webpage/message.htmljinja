{% if message.type.is_type("message.error") %}
	<div class="pypoly-message pypoly-message-error">{{message.text}}</div>
{% elif message.type.is_type("message.info") %}
	<div class="pypoly-message pypoly-message-info">{{message.text}}</div>
{% elif message.type.is_type("message.success") %}
	<div class="pypoly-message pypoly-message-success">{{message.text}}</div>
{% elif message.type.is_type("message.warning") %}
	<div class="pypoly-message pypoly-message-warning">{{message.text}}</div>
{% endif %}
