<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      lang="en"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="plone">

  <metal:border fill-slot="top_slot">
    <tal:border define="dummy python:request.set('enable_border',1)" />
  </metal:border>

<body>

    <div metal:fill-slot="main">

        <h1 tal:content="context/Title | context/getId" class="documentFirstHeading">
            Title or id
        </h1>

        <a href=""
           class="link-parent"
           tal:define="parent_url python:context.navigationParent(context, template.getId())"
           tal:condition="parent_url"
           tal:attributes="href parent_url"
           i18n:translate="go_to_parent_url">
        Up one level
        </a>

        <tal:byline tal:on-error="string:">
           <div tal:replace="structure provider:plone.belowcontenttitle"/>
        </tal:byline>

        <div class="label">Effective</div>
        <div class="field" tal:content="context/effective"/>

        <div class="label">Code</div>
        <div class="field" tal:content="context/code"/>


        <div class="label">Rate</div>
        <div class="field" tal:content="context/rate"/>

        <tal:block tal:repeat="extra context/extras">
            <div class="label" tal:content="extra/capitalize"/>
            <div class="field" tal:content="python: getattr(context, extra, '')"/>
        </tal:block>

      <div tal:replace="structure provider:plone.documentactions">
           Document actions (print, sendto etc)
      </div>
    </div>

</body>
</html>
