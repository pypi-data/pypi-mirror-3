<div xmlns:tal="http://xml.zope.org/namespaces/tal"
     xmlns:i18n="http://xml.zope.org/namespaces/i18n"
     i18n:domain="horae.notification"
     class="notifications">
  <a href="" title=""
     tal:attributes="href viewlet.url;
                     title viewlet.message;
                     class 'unread' if viewlet.unread > 0 else ''"
     tal:content="viewlet.unread" />
</div>
