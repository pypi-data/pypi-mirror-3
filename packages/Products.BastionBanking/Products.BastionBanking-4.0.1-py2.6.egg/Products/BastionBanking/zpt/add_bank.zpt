<html tal:replace="structure container/manage_page_header"/>

    <div tal:replace="structure python:container.manage_form_title(
           form_title='<img src=%s/misc_/BastionBanking/bank.gif> %s' % (request['BASEPATH1'],
                                                                         'Add BastionBank'),
           help_product='BastionBanking',
           help_topic='bank.stx')"/>


     <form action="manage_addBastionBankService" method="post">
     <table>
       <tr><td class="form-label">Id</td>
           <td class="form-label">BastionBankService</td>
       </tr>
       <tr><td class="form-label">Title</td>
           <td class="form-element">
              <input type="text" name="title" size="30" value="Internet Bank Facility">
          </td>
       </tr>
       <tr><td class="form-label">Provider</td>
           <td class="form-element">
              <select name="service">
                 <option tal:repeat="provider python: modules['Products.BastionBanking.Banks'].services()"
                         tal:content="provider"/>
              </select>
          </td>
       </tr>
       <tr><td class="form-element"><input type="submit" value=" Add "></td></tr>
        </table>
     </form>

<html tal:replace="structure container/manage_page_footer"/>
