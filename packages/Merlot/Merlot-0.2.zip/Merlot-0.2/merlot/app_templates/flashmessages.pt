<div id="flash-messages">
    <ul class="messages"
        tal:define="messages python:viewlet.messages"
        tal:condition="messages">
        <li tal:repeat="message messages">
            <span tal:replace="message"></span>
        </li>
    </ul>

     <ul class="errors"
         tal:define="messages python:viewlet.errors"
         tal:condition="messages">
         <li tal:repeat="message messages">
            <span tal:replace="message"></span>
         </li>
     </ul>
</div>

