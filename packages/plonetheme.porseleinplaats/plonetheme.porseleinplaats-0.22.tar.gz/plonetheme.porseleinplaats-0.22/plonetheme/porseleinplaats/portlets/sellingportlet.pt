<dl class="portlet portlet-selling"
    i18n:domain="plone" tal:condition="exists:context/for_sale">

    <dd class="portletItem"
	    tal:define="creator python:context.portal_membership.getMemberById(context.Creator());
			    email python:creator.getProperty('email', None);
	    ">
	<div class="sellingInfo" tal:condition="not: context/for_sale">Niet te koop</div>
	<div class="sellingInfo" tal:condition="context/for_sale">
	<span tal:content="string:${context/price} &euro;" omit-tag="">1000.00 &euro;</span>
	<a href="" tal:attributes="href string:mailto:${email}" class="emailButton">Email deze adverteerder</a>
	</div>
	<div class="visualClear"></div>
    </dd>
</dl>





