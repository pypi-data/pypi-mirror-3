#!/bin/sh
##----------------------------------------------------------------------
## NOC post-install script
##----------------------------------------------------------------------
## Copyright (C) 2007-2009 The NOC Project
## See LICENSE for details
##----------------------------------------------------------------------
PREFIX=/opt/noc

cd $PREFIX

./scripts/install-conf
chmod 640 etc/*.conf
chown noc:noc etc/*.conf
##
## Create required directories
##
for d in local etc/ssh static/doc /var/repo /var/backup /var/log/noc; do
    [ ! -d $d ] && mkdir $d
    chown noc:noc $d
done
chmod 700 etc/ssh
