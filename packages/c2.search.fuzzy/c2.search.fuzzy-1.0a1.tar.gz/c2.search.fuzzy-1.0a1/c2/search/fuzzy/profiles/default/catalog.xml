<?xml version="1.0"?>
<object name="portal_catalog" meta_type="Plone Catalog Tool">
    <property name="title">Indexes all content in the site</property>

    <object name="mecab_part_lexicon" meta_type="ZCTextIndex Lexicon">
        <element name="C2MecabPartSplitter" group="Word Splitter"/>
        <element name="C2Mecab Case Normalizer" group="Case Normalizer"/>
        <!--element name="Remove listed stop words only" group="Stop Words"/-->
    </object>
    <object name="mecab_yomi_lexicon" meta_type="ZCTextIndex Lexicon">
        <element name="C2MecabYomiSplitter" group="Word Splitter"/>
        <element name="C2Mecab Case Normalizer" group="Case Normalizer"/>
        <!--element name="Remove listed stop words only" group="Stop Words"/-->
    </object>

    <index name="SearchableTextForFuzzy" meta_type="ZCTextIndex">
        <indexed_attr value="SearchableText"/>
        <extra name="index_type" value="Okapi BM25 Rank"/>
        <extra name="lexicon_id" value="mecab_part_lexicon"/>
    </index>
    <index name="SearchableTextForYomi" meta_type="ZCTextIndex">
        <indexed_attr value="SearchableText"/>
        <extra name="index_type" value="Okapi BM25 Rank"/>
        <extra name="lexicon_id" value="mecab_yomi_lexicon"/>
    </index>

</object>