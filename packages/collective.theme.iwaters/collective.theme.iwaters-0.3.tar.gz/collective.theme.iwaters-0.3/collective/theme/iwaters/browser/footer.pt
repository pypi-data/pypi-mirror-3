<div metal:define-macro="portal_footer"
     i18n:domain="plone"
     class="row">
    <div class="cell width-full position-0">

        <div id="portal-footer" tal:define="portal_state context/@@plone_portal_state" >
            <p>
                <acronym title="Copyright">&#xA9;</acronym>
                <tal:year tal:content="view/year" />
                <span tal:replace="portal_state/portal_title" />
                -
                Last Update: <span tal:replace="view/last_update" />
            </p>
        </div>

    </div>
</div>
