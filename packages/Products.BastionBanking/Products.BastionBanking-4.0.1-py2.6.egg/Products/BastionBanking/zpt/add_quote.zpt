<html tal:replace="structure container/manage_page_header"/>

    <div tal:replace="structure python:container.manage_form_title(
           form_title='<img src=%s/misc_/BastionBanking/quote.gif> %s' % (request['BASEPATH1'],
                                                                         'Add Bastion Quote'),
           help_product='BastionBanking',
           help_topic='bank.stx')"/>

   <br/>
   <form action="manage_addBastionQuote" method="post">
     <table>
       <tr><td class="form-label">Amount</td>
           <td class="form-element">
              <input type="text" name="amount:currency" size="12"/>
           </td>
       </tr>
       <tr><td class="form-label">Quantity</td>
           <td class="form-element">
              <input type="text" name="quantity" size="8"/>
           </td>
       </tr>
       <tr><td class="form-label">Expires</td>
           <td class="form-element">
              <input type="text" name="expires:date" size="25" value=""
                     tal:attributes="value python: DateTime() + 1"/>
           </td>
       </tr>
       <tr><td class="form-element"><input type="submit" value=" Add "></td></tr>
     </table>
   </form>

<html tal:replace="structure container/manage_page_footer"/>
