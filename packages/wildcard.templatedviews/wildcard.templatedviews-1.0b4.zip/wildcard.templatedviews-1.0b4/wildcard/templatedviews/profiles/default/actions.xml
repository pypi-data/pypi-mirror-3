<?xml version="1.0"?>
<object name="portal_actions" meta_type="Plone Actions Tool">
  <action-provider name="portal_actions">

    <action title="Select Template" action_id="select_template" category="object"
      condition_expr="object/@@templated-view/enabled"
      url_expr="string:${object_url}/@@select-templated-form" visible="True">
      <permission>Modify portal content</permission>
    </action>

    <action title="Template Settings" action_id="template_settings" category="object"
      condition_expr="object/@@templated-view/enabled"
      url_expr="string:${object_url}/@@template-view-settings" visible="True">
      <permission>Modify portal content</permission>
    </action>

  </action-provider>
</object>