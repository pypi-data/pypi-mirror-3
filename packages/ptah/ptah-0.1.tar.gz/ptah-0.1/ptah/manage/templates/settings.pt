<div class="page-header">
  <h1>Settings</h1>
</div>

<div class="row" tal:repeat="group data">
  <div class="span16 columns">
    <h3>${group['title']}</h3>
    <small>${group['description']}</small>

    <p>
      <table class="zebra-striped">
	<tr tal:repeat="field group['schema']">
	  <td>
	    <a name="${field['name']}"></a>
	    ${field['name']}
	  </td>
	  <td>${field['value']}</td>
	  <td>${field['title']}</td>
	  <td>
	    <em>${field['description']}</em>
	  </td>
	</tr>
      </table>
    </p>
  </div>
</div>
