<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      lang="en"
      metal:use-macro="here/main_template/macros/master"
      i18n:domain="Products.googlecoop">
<body>
    <div metal:fill-slot="main">
        <tal:main-macro metal:define-macro="main">

            <div id="google-coop-cse" style="width: 100%;">
                <img src="googlecoop-loader.gif" alt="Loading"
                    tal:attributes="src string:${view/portal_url}/googlecoop-loader.gif"
                />
            </div>
            <script type="text/javascript" tal:content="view/get_js">
              google.load('search', '1', {language : 'en'});
              google.setOnLoadCallback(function() {
                var customSearchControl = new google.search.CustomSearchControl('008685122749687227183:d6kv20cgnc0');
                customSearchControl.setResultSetSize(google.search.Search.LARGE_RESULTSET);
                var options = new google.search.DrawOptions();
                options.setAutoComplete(true);
                // Draw the control in content div
                customSearchControl.draw('google-coop-cse');
                // run a query
                customSearchControl.execute('searchable Text');
              }, true);
            </script>


        </tal:main-macro>
    </div>
</body>
</html>
