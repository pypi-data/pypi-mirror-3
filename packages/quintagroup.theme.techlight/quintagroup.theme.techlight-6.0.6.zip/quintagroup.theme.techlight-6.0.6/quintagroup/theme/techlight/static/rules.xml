<?xml version="1.0" encoding="UTF-8"?>
<rules
    xmlns="http://namespaces.plone.org/diazo"
    xmlns:css="http://namespaces.plone.org/diazo/css"
    xmlns:xsl="http://www.w3.org/1999/XSL/Transform">

    <!-- The default theme, used for standard Plone web pages -->
    <theme href="index.html" css:if-content="#visual-portal-wrapper" />
    <notheme if-path="@@manage-viewlets" />
    <!-- Rules applying to a standard Plone web page -->
    <rules css:if-content="#visual-portal-wrapper">
        <!-- Add meta tags -->
        <drop theme="/html/head/meta" />
        <drop css:content="link[href$='public.css']" />
        <drop css:content="link[href$='columns.css']" />
        <drop css:content="link[href$='portlets.css']" />
        <drop css:content="link[href$='discussion.css']" />
        <drop css:content="link[href$='ploneKss.css']" />
        <drop css:content="link[href$='print.css']" />
        <drop css:content="link[href$='mobile.css']" />
        <drop css:content="link[href*='base-cachekey']" />
        <drop css:content="link[href$='favicon.ico']" />
        <after content="/html/head/meta" theme-children="/html/head" />
        <after content="/html/head/base" theme-children="/html/head" />
        <replace theme='/html/head/title' content='/html/head/title' />

        <!-- Copy style, script and link tags in the order they appear in the content -->
        <before content="/html/head/style | /html/head/script | /html/head/link" theme-children="/html/head" />

        <!-- Copy over the id/class attributes on the body tag.
             This is important for per-section styling -->
        <copy attributes="id dir class" css:content="body" css:theme="body" />
        <copy attributes="class" content='//*[@id="portal-column-content"]' theme='//*[@id="portal-column-content"]' />
        <copy attributes="*" content='//*[@id="portal-column-one"]' theme='//*[@id="portal-column-one"]' />


        <!-- Skip Links -->
        <before css:content="#portal-header > p.hiddenStructure" css:theme-children="#portal-header" />

        <!-- Logo -->
        <replace css:content="#portal-logo" css:theme="#portal-logo" />

        <!-- Site actions -->
        <replace css:content="#portal-siteactions" css:theme="#portal-siteactions" />

        <!-- Portal languageselector -->
        <replace css:content="#portal-languageselector" css:theme="#portal-languageselector" />

        <!-- Portal-searchbox -->
        <replace css:content='#portal-searchbox' css:theme='#portal-searchbox' />

        <!-- Portal-Personaltools -->
        <replace css:content="#portal-personaltools-wrapper" css:theme="#portal-personaltools-wrapper"/>

        <!-- Breadcrumbs -->
        <drop css:content="#portal-breadcrumbs" /> 
        <replace css:content="#portal-breadcrumbs" css:theme="#portal-breadcrumbs" method="raw"/>

        <after css:theme="#portal-breadcrumbs" css:content="#portlets-in-header" />
        <after css:theme="#portal-breadcrumbs" css:content=".manageInHeaderPortletsLink" />

        <!-- Document Content -->
        <strip css:content="#portal-column-content > div:not(#viewlet-above-content):not(#viewlet-below-content)" if-content="//div[@id='portal-column-content']/div/div[@id='content']" />
        <replace css:content-children="#portal-column-content" css:theme-children="#content-wrapper" />
        <drop css:content="img[alt='Image'][src$='image.png']" />
        <drop css:content="img[alt='File'][src$='image.png']" />
        <drop css:content="#plone-contentmenu-factories li a img" />

        <!-- Columns -->
        <drop css:theme="div#portal-column-one div.portletWrapper:first-child"   if-path="@@manage-portlets" />
        <replace css:theme-children="div#portal-column-one div.portletWrapper:first-child dl.portlet dd #theme-globalnav" css:content-children="#portal-globalnav"/>
        <after css:theme-children="#portal-column-one" css:content-children="#portal-column-one" />
        <replace css:content="#portal-column-two" css:theme="#portal-column-two" />

        <rules if-content="not(//*[@id='portal-column-one'])">
        <merge attributes="class" href="/++theme++quintagroup.theme.techlight/extra.html" css:content=".visualColumnHideOne" theme='//*[@id="portal-columns"]'  css:if-content='#portal-column-two' />
        </rules>

        <rules css:if-content='#portal-column-one'>
        <merge attributes="class" href="/++theme++quintagroup.theme.techlight/extra.html" css:content=".visualColumnHideTwo" theme='//*[@id="portal-columns"]'  if-content="not(//*[@id='portal-column-two'])" />
        </rules>

        <rules css:if-content='#portal-column-one'>
        <merge attributes="class" href="/++theme++quintagroup.theme.techlight/extra.html" css:content=".visualColumnHideNone" theme='//*[@id="portal-columns"]'  css:if-content='#portal-column-two' />
        </rules>

        <rules if-content="not(//*[@id='portal-column-one'])">
        <merge attributes="class" href="/++theme++quintagroup.theme.techlight/extra.html" css:content=".visualColumnHideOneTwo" theme='//*[@id="portal-columns"]'  if-content="not(//*[@id='portal-column-two'])" />
        </rules>

        <!-- Footer -->
        <before css:theme="#portal-footer" css:content="#portlets-footer" />
        
        <before css:theme="#portal-footer" css:content=".manageFooterPortletsLink" />
        
        <replace css:theme="#portal-footer" css:content="#portal-footer" />

        <after css:content="#kss-spinner" css:theme-children="#visual-portal-wrapper" />

        <replace css:theme="#plone-statistics">
            <xsl:value-of select="$stat" disable-output-escaping="yes" /> 
        </replace>

    </rules>

</rules>
