<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="here/main_template/macros/master"
      i18n:domain="plone">

<div metal:fill-slot="top_slot" tal:define="dummy python:request.set('disable_border', 1);
                                            disable_column_one python:request.set('disable_plone.leftcolumn',1);
                                            disable_column_two python:request.set('disable_plone.rightcolumn',1);
" />

<metal:slot fill-slot="javascript_head_slot">
    <script tal:define="item_url context/absolute_url" tal:condition="python:item_url[-3:]!='swf'" type="text/javascript" src="++resource++flowplayer-3.2.4.min.js">
    </script>
</metal:slot>
<body>
    <metal:content-core fill-slot="content-core">
        <metal:block define-macro="content-core">
        <div tal:define="item_url context/absolute_url">
            <center>
                <a id="player" tal:attributes="href string:${item_url}">
                </a>

                <script>
                    flowplayer("player", "portal_skins/adi_suite_files/flowplayer-3.2.5.swf",{

 
                        }
                    );
                </script>
            </center>
        </div>
        </metal:block>
    </metal:content-core>
</body>
</html>
