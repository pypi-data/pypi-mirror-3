<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      lang="en"
      metal:use-macro="here/main_template/macros/master"
      i18n:domain="PloneContentTemplates">

<metal:block fill-slot="top_slot"
             tal:define="dummy python:request.set('disable_border',1)" />

<body>

    <div metal:fill-slot="main">
    <metal:main-macro define-macro="main" tal:define="templates here/pct_get_templates">

	<metal:block tal:condition="templates">
		<form tal:attributes="action string:${here/absolute_url}/pct_add_object" method="post">
		<metal:block tal:repeat="object templates">
			<input type="radio" name="template" tal:attributes="value python:here.pct_get_plone_url(object);
				checked repeat/object/start" />
			<span tal:content="object/Title" /><br />
		</metal:block>

		<br />
		<input type="submit" value="Add from template" i18n:attributes="value" />
		</form>
	</metal:block>

	<metal:block tal:condition="not:templates">
		<p i18n:translate="">To add content from templates, create content first and set the keyword content-template
		on the content you want to use as templates.</p>
	</metal:block>

    </metal:main-macro>
    </div>

</body>
</html>
