<tal:block tal:repeat="acl view.acls">
  <div class="page-header">
    <h2>${acl.title} <small>${acl.name}</small></h2>
    <p>Defined: 
      <a href="${view.manage_url}/source.html?pkg=${acl.directiveInfo.module.__name__}#sl-${acl.directiveInfo.codeinfo[1]}">${acl.directiveInfo.module.__name__}</a></p>
    <p>${acl.description}
  </div>

  <div class="content">
    <table class="zebra-striped">
      <tr tal:repeat="rec acl">
	<td>${rec[0]}</td>
	<td>${rec[1]}</td>
	<td>${rec[2]}</td>
      </tr>
    </table>
  </div>
</tal:block>
