<dl class="portlet" id="portlet-zpydoc" 
      tal:define="zpydoc_url view/zpydoc_url;
                  site_url view/site_url">
    <dt class="portletHeader">
         <span class="portletTopLeft"></span>
         <a href="" i18n:translate="box_zpydoc" 
            tal:attributes="href zpydoc_url">API Documentation</a>
         <span class="portletTopRight"></span>
    </dt>
    <dd class="portletItem lastItem">                
       <div>
           <a href="" tal:attributes="href zpydoc_url">
               <img src="zpydoc.gif" border="0"
                    tal:attributes="src string:${site_url}/zpydoc.gif"/>
           </a>
           &nbsp; View API Docs
       </div>
       <div tal:repeat="doc view/modules">
           <a href="" tal:attributes="href string:${zpydoc_url}/${doc}">
               <img src="" tal:attributes="src string:${site_url}/package.png" border="0"/>
               &nbsp;<span tal:replace="doc"/>
           </a>
       </div>
       <span class="portletBottomLeft"></span>
       <span class="portletBottomRight"></span>
     </dd>
</dl>
