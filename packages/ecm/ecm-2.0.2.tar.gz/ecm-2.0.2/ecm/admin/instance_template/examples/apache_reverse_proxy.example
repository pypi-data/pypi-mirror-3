# vim: set filetype=apache:

<VirtualHost *:80>

    DocumentRoot "%(instance_dir)s"
    ServerName %(host_name)s

    <Proxy *>
        Order deny,allow
        Allow from all
    </Proxy>

    ProxyPass /static/ !
    ProxyPass / http://%(bind_address)s:%(bind_port)s/

    <Directory "%(instance_dir)s/static">
        Order deny,allow
        Allow from all
        Options -Indexes
    </Directory>

</VirtualHost>

