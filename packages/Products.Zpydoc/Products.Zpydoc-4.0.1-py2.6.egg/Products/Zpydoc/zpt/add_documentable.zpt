<html tal:replace="structure context/manage_page_header"/>

    <div tal:replace="structure python:context.manage_form_title(
           form_title='<img src=%s/misc_/Zpydoc/documentable.gif> %s' % (request['BASEPATH1'],
                                   'Add ZpyDocumentable'),
           help_product='Zpydoc',
           help_topic='zpydocumentable.stx')"/>

    <div class="system-msg" tal:condition="not: context/renderers/objectIds">
        Please create at least one renderer (via 'Renderers' tab) before adding any documentables.
    </div>

<br/>
<form action="manage_addZpyDocumentable" method="POST">
  <table>
    <tr>
      <td class="form-label">Directory</td>
      <td class="form-element">
        <select name="directory">
           <option tal:repeat="dir context/pythonpaths" tal:content="dir"/>
        </select>
      </td>
    </tr>
    <tr>
      <td class="form-label">Renderer</td>
      <td class="form-element">
        <select name="renderer_id">
           <option tal:repeat="renderer context/renderers/objectIds" 
                   tal:content="renderer"/>
        </select>
      </td>
    </tr>
    <tr>   
       <td class="form-element" colspan="2">
           <input class="form-element" type="submit" name="submit" value=" Add " />
       </td>
    </tr>
    </table>
</form>

<html tal:replace="structure context/manage_page_footer"/>
