#!/usr/bin/python2.6

import gobject, gtk
import getopt,sys,os

from pylocator.pylocator_mainwindow import PyLocatorMainWindow
from pylocator.shared import shared

usage="""usage: %s [options]
options:
--help -h         print this message
--filename -f     filename""" % sys.argv[0]

def main(*args):
    try:
        options, args = getopt.getopt(sys.argv[1:], 'hf:s:', ['help','filename=','surface'])
    except (getopt.GetoptError):
            print usage; sys.exit(0)

    filename=None
    surface=None
    for option, value in options:
        if option in ('-h', '--help'):
            print usage; sys.exit(0)
        if option in ('-f', '--file'):
            filename=value
        if option in ('-s', '--surface'):
            surface=value

    window = PyLocatorMainWindow(filename=filename,surface=surface)
    #window.show()
    gtk.main()

if __name__=="__main__":
    main()
