<i18n:x domain="ztfy.blog">
	<img class="search" src="/--static--/ztfy.blog/img/search.png" alt="" title="Change target"
		 tal:attributes="onclick string:$$.ZBlog.reference.activate('${view/name}__selector');" i18n:attributes="title" />
	<input type="hidden" id="" name="" lang=""
		   tal:attributes="id view/id;
						   name view/name;
						   lang view/lang;
						   value view/value;" />
	<input type="text" id="" name="" lang=""
		   tal:attributes="id string:${view/id}__selector;
						   name string:${view/name}__selector;
						   lang view/lang;
						   class string:${view/klass} search selector;
						   style view/style;
						   title view/title;
						   value view/target_title;
						   disabled view/disabled;
						   onclick view/onclick;
						   ondblclick view/ondblclick;
						   onmousedown view/onmousedown;
						   onmouseup view/onmouseup;
						   onmouseover view/onmouseover;
						   onmousemove view/onmousemove;
						   onmouseout view/onmouseout;
						   onkeypress view/onkeypress;
						   onkeydown view/onkeydown;
						   onkeyup view/onkeyup;
						   tabindex view/tabindex;
						   onfocus view/onfocus;
						   onblur view/onblur;
						   onchange view/onchange;
						   readonly python:view.value or view.readonly;
						   alt view/alt;
						   accesskey view/accesskey;
						   onselect view/onselect;
						   size view/size;
						   maxlength view/maxlength" />
	<script type="text/javascript" tal:content="structure string:
		// <![CDATA[
		$$(document).ready(function() {
			$$('INPUT[name=${view/name}__selector]').keypress($$.ZBlog.reference.keyPressed);
		});
		// ]]>
	"></script>
</i18n:x>