<html xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      metal:use-macro="path:view/macro"
      i18n:domain="horae.reports">
  <div metal:fill-slot="content">
    <div class="report">
      <h1 class="firstHeading"
          tal:content="context.name">
        Report
      </h1>
      <dl class="collapsible text description"
          tal:condition="context.description">
        <dt class="toggler"
            i18n:domain="horae.ticketing"
            i18n:translate="">
          Description
        </dt>
        <dd class="contents">
          <div class="display-form"
               tal:content="structure context.description">
            Description
          </div>
        </dd>
      </dl>
      <table tal:replace="structure view.rendered" />
    </div>
  </div>
</html>