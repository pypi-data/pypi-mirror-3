<html xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="bastionledger">

  <div metal:fill-slot="main"
       tal:define="utool context/@@plone_portal_state/portal_url">

      <h1><img src="" alt="" tal:define="icon python:context.getIcon(1)" 
               tal:attributes="src string:${utool}/${icon}">&nbsp;
          <span tal:replace="context/Title | context/getId"/></h1>

      <a href=""
           class="link-parent"
           tal:define="parent_url python:context.navigationParent(context, template.getId())"
           tal:condition="parent_url"
           tal:attributes="href parent_url"
           i18n:translate="go_to_parent_url">Up one level</a>

      <table border="0" cellpadding="2" cellspacing="0" width="100%">
         <tr>
             <td/>
             <td><label>Ledger</label></td>
             <td><label>Period Began</label></td>
             <td><label>Period Ended</label></td>
             <td align="right"><label>No. Accs</label></td>
             <td align="right"><label>No. Txns</label></td>
         </tr>
         <tr tal:repeat="item context/objectValues"
             tal:attributes="class python: test(repeat['item'].odd(), 'odd', 'even')">
             <td><img src=""  tal:define="icon python:item.getIcon(1)" 
                        tal:attributes="src string:${utool}/${icon}"/></td>
             <td><a href="" tal:attributes="href item/absolute_url" tal:content="item/getId"/></td>
             <td tal:content="item/period_began"/>
             <td tal:content="item/period_ended"/>
             <td align="right" tal:content="item/num_accounts"/>
             <td align="right" tal:content="item/num_transactions"/>
         </tr>
      </table>

      <div tal:replace="structure provider:plone.documentactions">
           Document actions (print, sendto etc)
      </div>

  </div>

</html>
