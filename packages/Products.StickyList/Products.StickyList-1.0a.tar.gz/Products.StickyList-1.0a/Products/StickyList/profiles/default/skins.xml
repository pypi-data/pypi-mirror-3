<?xml version="1.0"?>

<object name="portal_skins"
        meta_type="Plone Skins Tool"
        allow_any="False"
        cookie_persistence="False"
        request_varname="plone_skin">

 <object name="stickylist_templates"
         meta_type="Filesystem Directory View"
         directory="StickyList/skins/stickylist_templates"/>
 <object name="stickylist_images"
         meta_type="Filesystem Directory View"
         directory="StickyList/skins/stickylist_images"/>
 
 <skin-path name="*">
  <layer insert-after="custom" 
         name="stickylist_templates"/>
  <layer insert-after="custom" 
         name="stickylist_images"/>
 </skin-path>

</object>
