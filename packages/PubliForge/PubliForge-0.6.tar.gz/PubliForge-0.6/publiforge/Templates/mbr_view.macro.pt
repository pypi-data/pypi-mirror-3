<div metal:define-macro="mbr_view" tal:omit-tag=""
       xmlns:tal="http://xml.zope.org/namespaces/tal"
       xmlns:metal="http://xml.zope.org/namespaces/metal">
  <table class="list smallList" tal:condition="members">
    <caption>${_('Members')}</caption>
    <tr>
      <th>${_('Login')}</th>
      <th>${_('Name')}</th>
      <th>${_('Permission')}</th>
    </tr>
    <tr tal:repeat="member members">
      <td><a href="${route('user_view', user_id=member[0])}">${member[1]}</a></td>
      <td><a href="${route('user_view', user_id=member[0])}">${member[2]}</a></td>
      <td>${perms[member[3]]}</td>
    </tr>
  </table>
</div>