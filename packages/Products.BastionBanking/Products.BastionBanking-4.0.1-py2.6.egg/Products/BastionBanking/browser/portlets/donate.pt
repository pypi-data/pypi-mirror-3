<div metal:define-macro="portlet">

  <dl class="portlet" id="portlet-donations">

    <dt class="portletHeader">
       <span i18n:translate="box_donations">Donations</span>
    </dt>

    <dd class="portletItem">
       <div align="center">
          <img src="" tal:attributes="src view/serviceIcon"/>
       </div>

       <div tal:define="desc view/Description"
            tal:condition="desc"
            tal:content="desc"/>

       <form action="" method="post"
             tal:attributes="action string:${view/merchantURL}/manage_pay">
         <table width="100%">
           <tr>
             <td align="left">
                 <input type="text" name="amount" value="" size="12"
                        tal:attributes="value view/suggestedAmount"/>
             </td>
             <td align="right">
                 <input type="submit" class="context" value=" Donate "/>
             </td>
           </tr>
         </table>
         <input type="hidden" name="reference" value="" 
                tal:attributes="value view/referenceURL"/>
       </form>
    </dd>

  </dl>

</div>

