#!/usr/bin/env python
from gi.repository import Gtk
from txtr.txtr_window import Window
import sys

class Txtr:
	def __init__(self):
		filenames = []
		if sys.argv:
			arguments = sys.argv[1:]
			for filename in arguments:
				filenames.append(filename)
				
		window = Window(filenames)
		window.show_all()
		
if __name__ == '__main__':
    Txtr()
    Gtk.main()

