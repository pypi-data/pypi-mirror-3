<div metal:define-macro="build_output" tal:omit-tag=""
     xmlns:tal="http://xml.zope.org/namespaces/tal"
     xmlns:metal="http://xml.zope.org/namespaces/metal">
  <div class="formItem" tal:condition="processing.output">
    <label for="output"><em>${_('Output:')}</em></label>
    <div id="output">
      <h3><a href="${route('storage_root', storage_id=output['storage_id'])}">${output['label']}</a></h3>
      ${_('Path:')} ${output['storage_id']} / ${form.text('path')}
      ${form.button(route('storage_browse', storage_id=output['storage_id'],
        path=processing.output.partition('/')[2]),
        src='/Static/Images/action_browse.png', title=_('View in storage'))}
      <strong tal:condition="form.has_error('path')" class="error">
        ${form.error('path')}
      </strong>
    </div>
  </div>
</div>