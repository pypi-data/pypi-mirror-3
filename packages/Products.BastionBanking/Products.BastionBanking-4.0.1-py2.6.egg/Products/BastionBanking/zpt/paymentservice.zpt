<html tal:replace="structure container/manage_page_header"/>
    <div metal:fill-slot="body">

    <span tal:replace="structure here/manage_tabs"/>

    <br/>
    <p class="form-help">From here, you may assign a particular service that can handle this policy.</p>

    <form name="policy" action="manage_edit" method="post">
	<table>
          <tr>
              <td class="form-label">Service</td>
              <td class="form-element">
                  <select name="service">
                     <option selected=""
                             tal:repeat="service here/services/objectIds"
                             tal:content="service"
                             tal:attributes="selected python:test(getattr(here, 'service', '') == service, 1, 0)"/>
                  </select>
              </td>
          </tr>
          <tr><td class="form-element" colspan="2" align="center">
                 <input type="submit" value=" Edit "/>
              </td>
          </tr>
        </table>
    </form>

<html tal:replace="structure container/manage_page_footer"/>
