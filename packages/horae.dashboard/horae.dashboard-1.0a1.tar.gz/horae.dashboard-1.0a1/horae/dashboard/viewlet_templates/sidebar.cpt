<html xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      tal:omit-tag="1"
      i18n:domain="horae.dashboard">
  <div class="dashboard-sidebar" tal:condition="viewlet.widgets">
    <div class="dashboard-widget"
         tal:repeat="widget viewlet.widgets"
         tal:attributes="class string:dashboard-widget ${widget['factory']}-widget">
      <div class="body">
        <div class="wrapper" tal:content="structure widget['view'](plain=True)" />
      </div>
    </div>
  </div>
</html>