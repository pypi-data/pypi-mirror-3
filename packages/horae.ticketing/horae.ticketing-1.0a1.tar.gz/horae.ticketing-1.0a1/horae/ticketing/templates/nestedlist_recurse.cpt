<tal:item xmlns:tal="http://xml.zope.org/namespaces/tal"
          repeat="item view.childs">
  <li class=""
      tal:define="odd path:repeat/item/odd|nothing;"
      tal:attributes="class 'odd' if odd else 'even'">
    <tal:renderer replace="structure item['renderer'](item['item'], item['childs'])" />
    <ol tal:condition="item['childs']">
      <tal:recurse replace="structure view.recurse(item['childs'])" />
    </ol>
  </li>
</tal:item>
