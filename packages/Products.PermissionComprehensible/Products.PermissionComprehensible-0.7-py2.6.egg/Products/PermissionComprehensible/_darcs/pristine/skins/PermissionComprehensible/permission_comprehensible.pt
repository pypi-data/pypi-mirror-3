<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="here/main_template/macros/master"
      i18n:domain="plone">

<metal:block fill-slot="top_slot"
             tal:define="dummy python:request.set('disable_border', 1)" />

<body>

<div metal:fill-slot="main">

    <h1 class="documentFirstHeading"
        i18n:translate="heading_permission_comprehensible">
        Comprehensible permissions
    </h1>

    <h2>Soft roles</h2>
    <metal:block tal:repeat="role_and_usernames python:context.pc_get_local_roles().items()">
      <h3 tal:content="python:role_and_usernames[0]"></h3>
      <metal:block tal:repeat="username python:role_and_usernames[1]">
	<a href="#" tal:attributes="href string:${context/absolute_url}/permission_comprehensible_user?user=${username}" tal:content="username">username</a><br />
      </metal:block>
    </metal:block>
  </div>

</body>

</html>
