<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      lang="en"
      metal:use-macro="here/main_template/macros/master"
      i18n:domain="collective.ots">
<body>
  <metal:content-core fill-slot="content-core">
    <metal:content-core define-macro="content-core">
     <form action="." method="post" name="summarize"
            tal:attributes="action string:${here/absolute_url}/@@summarize_view">
        <fieldset>
            <!--legend i18n:translate="legend_summary">Summary</legend--->
            <div class="field">
                <label for="summary" i18n:translate="label_summary">Summary</label>

                <div class="formHelp" i18n:translate="help_summary">
                Summary created by ots
                </div>

                <textarea
                       id="summary"
                       cols="40" name="description" rows="10" class="blurrable firstToFocus"
                       tal:content="view/get_summary">
                       Text summarized by ots
                </textarea>
            </div>
         </fieldset>
        <div>
            <input type="submit" class="context" name="form.button.save"
                value="Save" />
            <input type="submit" class="context" name="form.button.cancel"
                value="Cancel" />
        </div>

     </form>
     </metal:content-core>
  </metal:content-core>
</body>
</html>
