<html xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      metal:use-macro="path:view/macro">
  <div metal:fill-slot="columns">
    <div class="cell position-5 width-6">
      <form action="." tal:attributes="action path:request/URL" method="post"
            class="edit-form" enctype="multipart/form-data">
      
        <h1 class="firstHeading"
            i18n:translate=""
            tal:condition="path:view/label"
            tal:content="path:view/label">Label</h1>
      
        <div class="form-status"
          tal:define="status path:view/status"
          tal:condition="status">
      
          <div i18n:translate="" tal:content="path:view/status">
            Form status summary
          </div>
      
          <ul class="errors" tal:condition="path:view/errors">
            <li tal:repeat="error path:view/error_views">
               <span tal:replace="structure error">Error Type</span>
            </li>
          </ul>
        </div>
      
        <ul>
            <tal:block repeat="widget path:view/widgets">
              <li tal:define="hint path:widget/hint">
                <label tal:condition="hint"
                       tal:attributes="for path:widget/name">
                  <span class="required" tal:condition="path:widget/required"
                  >*</span><span i18n:translate=""
                                 tal:content="path:widget/label">label</span>
                </label>
                <label tal:condition="not hint"
                       tal:attributes="for path:widget/name">
                  <span class="required" tal:condition="path:widget/required"
                  >*</span><span i18n:translate=""
                                 tal:content="path:widget/label">label</span>
                </label>
                <div class="widget" tal:content="structure path:widget">
                  <input type="text" />
                </div>
                <div class="error" tal:condition="path:widget/error">
                  <span tal:replace="structure path:widget/error">error</span>
                </div>
              </li>
            </tal:block>
            <div tal:replace="structure path:view/additional|nothing" />
        </ul>
      
        <div id="actionsView">
          <span class="actionButtons" tal:condition="path:view/availableActions">
            <input tal:repeat="action path:view/actions"
                   tal:replace="structure path:action/render"
                   />
          </span>
        </div>
      </form>
    </div>
  </div>
</html>
