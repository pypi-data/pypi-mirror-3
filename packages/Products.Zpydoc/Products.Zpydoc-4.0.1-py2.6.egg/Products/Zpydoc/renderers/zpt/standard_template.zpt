<html metal:define-macro="page">
  <head>
     <title tal:content="here/title" tal:on-error="string:"/>
     <link rel="stylesheet" href="/stylesheet.css" type="text/css"
           tal:attributes="href python: getattr(here, 'stylesheet.css').absolute_url()">
      <meta http-equiv="content-type" content="text/html;charset=iso-8859-1">
  </head>
  <body metal:define-slot="body"/>
</html>

<div metal:define-macro="box">
  <table width="100%" cellspacing=0 cellpadding=2 border=0
         tal:define="boxcolor bgcolor | string:blue">
    <tr bgcolor="#ee77aa" tal:attributes="bgcolor boxcolor">
      <td colspan=3 valign=bottom>
        <small><small>&nbsp;<br></small></small>
        <div metal:define-slot="title"/>
      </td>
    </tr>
    <tr>
      <td bgcolor="#ee77aa" tal:attributes="bgcolor boxcolor">
          <tt>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</tt>
      </td>
      <td>&nbsp;&nbsp;</td>
      <td width="100%"><span metal:define-slot="body"/></td>
    </tr>
  </table>
</div>
