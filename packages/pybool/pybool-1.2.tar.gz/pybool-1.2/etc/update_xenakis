#!/bin/bash -e

#
# Build pdf of tutorial
#
(
rm -rf /tmp/pybool-export
svn export http://zemlinsky.mrc-bsu.cam.ac.uk/svn/johns/MyProjects/trunk/Python/pybool /tmp/pybool-export
#svn export http://sysbio.mrc-bsu.cam.ac.uk/svn/johns/MyProjects/trunk/Python/pybool /tmp/pybool-export
cd /tmp/pybool-export/
cd tex/Figures/
./make-figs.sh
cd ..
pdflatex -shell-escape pybool-tutorial
bibtex pybool-tutorial
pdflatex -shell-escape pybool-tutorial
pdflatex -shell-escape pybool-tutorial
scp pybool-tutorial.pdf xenakis:htdocs/pybool/
)

svn st
ssh xenakis "cd htdocs/pybool/ && svn up && etc/make_distribution"

