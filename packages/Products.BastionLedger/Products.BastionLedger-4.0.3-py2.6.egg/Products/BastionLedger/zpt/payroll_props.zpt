<html tal:replace="structure context/manage_page_header"/>
     <span tal:replace="structure context/manage_tabs"/>

     <br/>
       <table border="0" width="100%" cellspacing="0" cellpadding="0"
              tal:define="products python:container.filtered_meta_types(request)">
          <tr>
              <td align="right" valign="top" class="form-element">
                 <form method="get" action="" tal:attributes="action request/URL1">
                     <div tal:condition="python: len(products) > 1" tal:omit-tag="">
                         <select class="form-element" name=":action"
                                 onchange="" tal:attributes="onchange string:location.href='${request/URL1}/'+this.options[this.selectedIndex].value">
                             <option value="manage_workspace" disabled>Select type to add...</option>
                             <option tal:repeat="product products"
                                     value="" tal:attributes="value product/action"
                                     tal:content="product/name"/>
                          </select>
                          <input class="form-element" type="submit" value=" Add ">
                      </div>
                      <div tal:condition="python: len(products) == 1" tal:omit-tag="">
                          <span tal:define="product python:products[0]" tal:omit-tag="">
                             <input type="hidden" name=":method" value="" tal:attributes="value product/action"/>
                             <input class="form-element" type="submit" name="submit" value=""
                                    tal:attributes="value string: Add ${product/name}" />
                          </span>
                      </div>
                 </form>
              </td>
          </tr>
       </table>
       <form action="" method="post" tal:attributes="action request/URL1">
         <input type="hidden" name="dispatch_to" value="manage_propertiesForm"/>
         <table cellspacing="0" cellpadding="2" border="0">
              <tr>
                  <td class="form-label">Title</td>
                  <td class="form-element">
                      <input type="text" name="title" size="35" value=""
                            tal:attributes="value container/title | nothing">
                  </td>
              </tr>
              <tr>
                  <td class="form-label" valign="top">Description</td>
                  <td class="form-element">
                      <textarea type="text" name="description:text" rows="2" cols="50"
                                tal:content="context/description | nothing"/>
                  </td>
              </tr>
              <tr>
                  <td class="form-label">Next Account Number</td>
                  <td class="form-element">
                      <input type="text" name="account_prefix" size="5" value=""
                            tal:attributes="value container/account_prefix | nothing">
                      <input type="text" name="account_id" size="12" value=""
                            tal:attributes="value container/account_id">
                  </td>
              </tr>
              <tr>
                  <td class="form-label">Next Transaction Number</td>
                  <td class="form-element">
                      <input type="text" name="txn_prefix" size="5" value=""
                            tal:attributes="value container/txn_prefix | nothing">
                      <input type="text" name="txn_id" size="12" value=""
                            tal:attributes="value container/txn_id ">
                  </td>
              </tr>
              <tr tal:condition="exists: container/controlAccount">
                  <td class="form-label">Control Account</td>
                  <td class="form-element" 
                      tal:define="controlAccount context/controlAccount">
                     <select name="controlAccount">
                          <option tal:repeat="account context/Ledger/accountValues"
                                  tal:content="account/prettyTitle"
                                  tal:attributes="value account/getId;
                                                  selected python: test(account == controlAccount, 1, 0)"/>
                     </select>
                     <input class="form-element" type="submit" name="manage_changeControl:method"
                            value=" Change "/>
                     <input type="text" name="effective:date" value="" size="12"
                            tal:attributes="value request/effective | python: DateTime()"/>
                     <input class="form-element" type="submit" name="manage_recalculateControl:method" 
                            value=" Recalculate "/>
                  </td>
              </tr>
               <tr>
                  <td class="form-label" valign="top">Supported Currencies</td>
                  <td class="form-element">
                      <select name="currencies:list" multiple size="3"> 
                            <span tal:repeat="currency context/allCurrencies">
                                  <option value="" tal:attributes="value currency; selected python: test(currency in context.currencies, 1, 0)"
                                          tal:content="currency" selected/>
                            </span>
                      </select>
                  </td>
              </tr>
              <tr>
                 <td class="form-label">Timesheet Day</td>
                 <td class="form-element">
                     <select name="timesheet_day">
                          <option tal:repeat="day python:('Sunday', 'Monday', 'Tuesday', 'Wednesday', 'Thursday', 'Friday', 'Saturday')"
                                  tal:content="day"
                                  tal:attributes="selected python: test(context.timesheet_day == day, 1, 0)"/>
                     </select>
                 </td>
              </tr>
              <tr>
                 <td class="form-label">Timesheet Required</td>
                 <td class="form-element">
                     <input type="checkbox" name="timesheet_required:boolean" value="1" tal:attributes="selected context/timesheet_required | nothing"/>
                 </td>
              </tr>
              <tr>
                  <td class="form-label">Correspondence Email</td>
                  <td class="form-element">
                      <input type="text" name="email" size="30" value=""
                            tal:attributes="value container/email | nothing">
                  </td>
              </tr>
              <tr><td><input type="submit"  value="  Edit  " name="manage_edit:method" class="form-element"/></td></tr>
         </table>
       </form>
<html tal:replace="structure context/manage_page_footer"/>




