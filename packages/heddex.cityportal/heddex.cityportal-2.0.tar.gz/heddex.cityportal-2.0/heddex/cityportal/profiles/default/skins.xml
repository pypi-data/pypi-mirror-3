<?xml version="1.0"?>
<object name="portal_skins" allow_any="False" cookie_persistence="False"
   default_skin="HedDex CityPortal Theme">

 <object name="heddex_cityportal_images"
    meta_type="Filesystem Directory View"
    directory="heddex.cityportal:skins/heddex_cityportal_images"/>
 <object name="heddex_cityportal_templates"
    meta_type="Filesystem Directory View"
    directory="heddex.cityportal:skins/heddex_cityportal_templates"/>
 <object name="heddex_cityportal_styles"
    meta_type="Filesystem Directory View"
    directory="heddex.cityportal:skins/heddex_cityportal_styles"/>

 <skin-path name="HedDex CityPortal Theme" based-on="Plone Default">
  <layer name="heddex_cityportal_images"
     insert-after="custom"/>
  <layer name="heddex_cityportal_templates"
     insert-after="heddex_cityportal_images"/>
  <layer name="heddex_cityportal_styles"
     insert-after="heddex_cityportal_templates"/>
 </skin-path>

</object>