<div metal:use-macro="macro:form">
  <div metal:fill-slot="info"></div>
  <div metal:fill-slot="main"
       tal:define="subForm nocall:view/subForm">
    <div class="subForm" tal:condition="nocall:subForm">
      <div tal:replace="structure subForm/render">
        form
      </div>
    </div>
    <div tal:define="batch view/renderBatch">
      <div tal:content="structure view/renderTable">
        table
      </div>
      <div class="batch"
           tal:condition="batch"
           tal:replace="structure batch">
          batch
      </div>
    </div>
  </div>
  <div class="tableButtons" metal:fill-slot="buttons">
    <div class="tableButtonLeft">
    <input type="submit"
           tal:condition="nocall:view/actions/edit | nothing"
           tal:replace="structure view/actions/edit/render"
           />
    <input type="submit"
           tal:condition="nocall:view/actions/reschedule | nothing"
           tal:replace="structure view/actions/reschedule/render"
           />
    <input type="submit"
           tal:condition="nocall:view/actions/rescheduleall | nothing"
           tal:replace="structure view/actions/rescheduleall/render"
           />
    <input type="submit"
           tal:condition="nocall:view/actions/delete | nothing"
           tal:replace="structure view/actions/delete/render"
           />
    </div>
  </div>
</div>