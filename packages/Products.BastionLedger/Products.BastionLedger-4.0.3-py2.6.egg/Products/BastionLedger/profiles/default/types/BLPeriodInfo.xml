<?xml version="1.0"?>
<object name="BLPeriodInfo" meta_type="Factory-based Type Information with dynamic views"
   xmlns:i18n="http://xml.zope.org/namespaces/i18n">
 <property name="title"></property>
 <property name="description">A year-end summary</property>
 <property name="content_icon">blledger.gif</property>
 <property name="content_meta_type">BLPeriodInfo</property>
 <property name="product">BastionLedger</property>
 <property name="factory"></property>
 <property name="immediate_view">blperiodinfo_view</property>
 <property name="global_allow">False</property>
 <property name="filter_content_types">True</property>
 <property name="allowed_content_types">
 </property>
 <property name="allow_discussion">False</property>
 <alias from="(Default)" to="blperiodinfo_view"/>
 <!--alias from="edit" to="bl_form"/-->
 <alias from="transactions" to="blperiodinfo_transactions"/>
 <alias from="view" to="blperiodinfo_view"/>
 <action title="Accounts" action_id="view" category="object" condition_expr=""
    url_expr="string:${object_url}/view" visible="True">
  <permission value="BastionLedger: Operate"/>
 </action>
 <action title="Transactions" action_id="transactions" category="object" condition_expr=""
    url_expr="string:${object_url}/transactions" visible="True">
  <permission value="BastionLedger: Operate"/>
 </action>
 <!--action title="Edit" action_id="edit" category="object" condition_expr=""
    url_expr="string:${object_url}/edit" visible="True">
  <permission value="BastionLedger: Manage"/>
 </action-->
 <action title="Recalculate" action_id="recalculate" category="object" condition_expr=""
    url_expr="string:${object_url}/blperiodinfo_actions?form.button.Recalculate=1" visible="True">
  <permission value="BastionLedger: Manage"/>
 </action>
 
</object>
